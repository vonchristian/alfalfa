<div class="container">
         <div class="box box-solid">
         <div class="box-header with-border">
         <h4><center> New Entry</center></h4>
         </div>
         <div class="box-body">

                  <%= simple_form_for @entry do |f| %>
  <div class="row">
  <div class="col-md-6">

  </div>
  <div class="col-md-5">
  <br>
<%=f.input :description, as: :text %>

<%=f.simple_fields_for :credit_amounts do |d| %>
<%=d.input :amount, as: :string %>

<%=d.input :account, collection: Expense.all.pluck(:name)%>


<% end %>

<%=f.simple_fields_for :debit_amounts do |c| %>
<%=c.input :amount,  read_only: true, as: :hidden %>

<%=c.input :account, collection: Expense.all.pluck(:name)%>
<
<% end %>
</div>
</div>
<div class="modal-footer">
<%=f.submit "Record Entry", class: "btn btn-danger" %>

</div>
<% end %>
</div>
</div>


