
<div class="tab-pane" id="budget">
<%=link_to "Add Item", new_project_work_detail_path(@project) %>
<table class="table table-striped">
<thead>
  <tr>
    <th>Item Code</th>
    <th>Item Description</th>
    <th>Unit</th>
    <th>Quantity</th>
    <th>Amount</th>

  </tr>
</thead>
<% @project.work_details.each do |work_detail| %>
<tbody>
<tr>
<td><%=work_detail.code%> </td>
<td><%=link_to work_detail.description,[@project, work_detail] %></td>
<td><%=number_to_currency work_detail.total_direct_cost %></td>
</tr>
</tbody>
<% end %>
<h4>Total Budget: <%#=number_to_currency @project.total_budget %></h4>
</table>
</div>


