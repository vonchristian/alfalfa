<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <h4 class="title">List of Projects
              <% if current_user.project_engineer? %>
                <span class="pull-right"><%=link_to "New Project", new_project_path, class: "btn btn-sm btn-primary" %></span>
              </h4>
              <% end %>
            </div>
      <div class="content">
        <table class="table">
          <thead>
            <tr class="text-uppercase">
              <th>Name</th>
              <th>Location</th>
              <th>Contract Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to project.name, project %></td>
                <td><%= project.address %> </td>
                <td><%= number_to_currency project.cost %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
