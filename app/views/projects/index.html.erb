
            <div class="col-md-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">List of Projects</h3>
                   <span class="pull-right"><%=link_to overview_projects_path, class: "btn btn-default" do %><i class="fa fa-ellipsis-v"></i><%end%></span>
                  <span class="pull-right"><%=link_to new_project_path, class: "btn btn-default bg-blue-active pull-right" do %><i class="fa fa-user-plus"></i> New Project <%end%></span>
                </div><!-- /.box-header -->
                <div class="box-body">
                <div class="table table-responsive">
                  <table class="table   table-compressed">
<thead>   
<tr>
  
  <th style="width: 50%"><small>PROJECT NAME</small></th>
  <th><small>TARGET ACC.</small></th>
  <th><small>ACTUAL ACC.</small></th>
<th style="width: 10%"><small>SLIPPAGE</small></th>
  <th><small>AMOUNT</small></th>
  <!-- <th><small>CONTRACTORS</small></th> -->
  <th><small>DURATION/EXPIRY</small></th> 
  <th style="width: 20%">REMARKS</th>
</tr>
</thead> 
<tbody> 
 <% @projects.each do |project| %> 
 <tr>
  <td><%=link_to project.name.upcase, project %></td>
  <td><%=project.target_accomplishment %> %</td>
  <td><%=project.actual_accomplishment %> %</td>
  <td class="text-<%=project.slippage_color %> text-center"><i class="fa fa-caret-<%=project.slippage_sign %>"></i> <%=project.slippage%> %</td>
  <% if project.amount_revisions.present? %>
  <td><strike><small class="text-danger"><%=number_to_currency project.cost %></small></strike>
  <span class="text-success"><%=number_to_currency project.revised_contract_amount %></span>
  </td>
  <% else %>
  <td><%=number_to_currency project.cost %></td>
  <% end %>
  <!-- <td><%# project.contractors.each do |contractor| %>
            <p class="text-muted"><small><%#=contractor.company.upcase %> </small></p>
           <%# end %>
  </td>  -->
  <% if project.time_extensions.present? %>
  <td><%=project.revised_duration %> Days
  <% else %> 
  <td><%=project.duration %> Days
  <% end %>
   <% if project.notice_to_proceed.present? %>
    <p><small class="text-muted"><i class="fa fa-calendar"></i> NTP: (<%=project.start_date.strftime("%B %e, %Y") %>) </small></p>
     <p><small class="text-muted"><i class="fa fa-calendar"></i> Expiry: (<%=project.expiry_date.strftime("%B %e, %Y") %>) </small></p>
   <p><small class="text-success"><i class="fa fa-clock-o text-success"></i> <%=project.days_elapsed %> elapsed</small></p>
   <p><small class="text-danger"><i class="fa fa-clock-o text-danger"></i> <%=project.remaining_days %> remaining </small></p>

   <% end %>
  </td>
   <% if project.remarks.present? %>
<td><% project.remarks.limit(2).each do |remark| %>
<p><small class="text-info"><%=remark.remarker.full_name if remark.remarker %></small>
<small class="text-muted"><i class="fa fa-clock-o"></i> <%=remark.created_at.strftime("%b %e")%></small></p>
<p><small><%=remark.content %></small></p>


 
<% end %>
<% if project.remarks.count > 2 %>
<center class="text-primary"><%=project.remarks.count - 2 %> more </center>
<%end %>
<% end %>
</td>
  </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>
