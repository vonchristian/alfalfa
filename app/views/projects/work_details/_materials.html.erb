
<div class="tab-pane active" id="materials">
<%=link_to "Add Material", new_work_detail_material_path(@work_detail) %>
<div class="table table-responsive">
<table class="table table-striped table-hover">
<thead>
  <tr>
    <th style="width: 10%">Code</th>
    <th style="width: 30%">Description</th>
    <th>Unit</th>
    <th>Unit Cost</th>
    <th>Quantity</th>
    <th>Total Cost</th>
  </tr>
</thead>
<tbody>
<tr>
  <% @work_detail.materials.each do |material| %>
  <td><%=material.code %></td>
  <td><%=material.description %></td>
  <td><%=material.unit %></td>
  <td><%=number_to_currency material.unit_cost %></td>
  <td><%=material.quantity %></td>
  <td><%=number_to_currency material.total_cost %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>

