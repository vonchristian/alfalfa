<div class="tab-pane" id="equipment">

  <div class="box-body">
  <div class="row">
    <div class="col-md-4">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h4>Fuel Costs
          <span class="pull-right"><%=link_to "Add Fuel Cost", new_work_detail_equipment_fuel_cost_path(@work_detail), class: "btn btn-primary btn-sm" %>
          </span>
          </h4>
          </div>
          <div class="box-body">
          <%@work_detail.equipment_fuelcosts.each do |fuel_cost| %>

             <p><strong><%=fuel_cost.date_issued.strftime("%B %e, %Y")%></strong></p>
             <span class="text-muted"><%=fuel_cost.quantity %> <%=fuel_cost.inventory.unit %></span>
             <span class="pull-right"><%=number_to_currency fuel_cost.total_cost %></span>
             <hr>
          <% end %>
          </div>
        </div>
        </div>
         <div class="col-md-4">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h4>Equipment Costs
          <span class="pull-right"><%=link_to "Add Equipment Cost", new_work_detail_equipment_cost_path(@work_detail), class: "btn btn-primary btn-sm" %>
          </span>
          </h4>
          </div>
          <div class="box-body">
          <%@work_detail.equipment_costs.each do |equipment_cost| %>
<p><strong><%=equipment_cost.equipment %></strong></p>
<p class="text-muted"><%=equipment_cost.start_date.strftime("%B %e, %Y") %> - <%=equipment_cost.end_date.strftime("%B %e, %Y") %></p>
             <span class="text-muted"><%=equipment_cost.number_of_hours %> Hours </span>
             <span class="pull-right"><%=number_to_currency equipment_cost.total_cost %></span>
             <hr>
          <% end %>
          </div>
        </div>
        </div>

 <div class="col-md-4">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h4>Equipment Maintenance
          <span class="pull-right"><%=link_to "Add Maintenance Cost", new_work_detail_equipment_maintenance_path(@work_detail), class: "btn btn-primary btn-sm" %>
          </span>
          </h4>
          </div>
          <div class="box-body">
          <%@work_detail.equipment_maintenances.each do |equipment_maintenance| %>
<p><strong><%=equipment_maintenance.equipment %></strong></p>
<span class="text-muted"><%=equipment_maintenance.quantity %> <%=equipment_maintenance.unit %> <%=equipment_maintenance.description %></span>
<span class="pull-right"><%=number_to_currency equipment_maintenance.amount %></span><br>
<span class="text-muted"><%=equipment_maintenance.remarks %></span>


             <hr>
          <% end %>
          </div>
        </div>

</div>
</div>
</div>
</div>



