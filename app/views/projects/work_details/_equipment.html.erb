<div class="tab-pane" id="equipment">
  <div class="box-header with-border">
    <div class="pull-right">
      <%=link_to "Add Maintenance Expense", new_work_detail_equipment_maintenance_path(@work_detail), class: "btn btn-default bg-blue-active" %>
    </div>
  </div>
  <div class="box-body">
    <div class="table table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th style="width: 30%">Equipment</th>
            <th>Number of Equipment</th>
            <th>Number of Days</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @work_detail.equipment_maintenances.each do |maintenance| %>
            <tr>
              <td><%=maintenance.equipment %></td>
              <td><%=maintenance.quantity%></td>
              <td><%=maintenance.description %></td>
              <td><%=maintenance.unit %></td>
              <td><%=number_to_currency maintenance.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
