<div class="tab-pane" id="equipment">
<%=link_to "Add Maintenance Expense", new_work_detail_equipment_maintenance_path(@work_detail) %>
<div class="table table-responsive">
<table class="table table-striped table-hover">
<thead>
  <tr>
    <th style="width: 30%">Equipment</th>
    <th>Number of Equipment</th>
    <th>Number of Days</th>
    <th>Daily Rate</th>
    <th>Total Cost</th>
  </tr>
</thead>
<tbody>
<tr>
  <% @work_detail.equipment_maintenances.each do |maintenance| %>
  <td><%=maintenance.equipment %></td>
  <td><%=maintenance.date %></td>
  <td><%=maintenance.description %></td>
  <td><%=number_to_currency equipment_quantity%></td>
  <td><%=number_to_currency maintenance.unit %></td>
  <td><%=number_to_currency maintenance.amount %></td>
  <td><%=number_to_currency maintenance.remarks%></td>
  <td><%=number_to_currency maintenance.employee %></td>



  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
