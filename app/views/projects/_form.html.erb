<div class="container">
<div class="box box-solid">
<div class="box-body">
<br>
<h4 class="text-center">New Project Details</h4>
<span class="help-block text-center"> </span>
<hr>


                  <%= simple_form_for @project, html: { class: 'form-horizontal' },
                            wrapper: :horizontal_form,
                            wrapper_mappings: {
                            check_boxes: :vertical_radio_and_checkboxes,
                            radio_buttons: :horizontal_radio_and_checkboxes,
                            file: :horizontal_file_input,
                            boolean: :horizontal_boolean
                            } do |f| %>
    <%=f.error_notification %>
    <div class="row">
        <div class="col-md-3 col-md-offset-1">
          <h5 class="text-muted text-center">PROJECT DETAILS</h5>
        </div>
        <div class="col-md-6 col-md-2">
          <%=f.input :name, as: :text, input_html: {rows: 10, class: "input-lg"}, label: "Project Name", autofocus: true, placeholder: "Enter name of project" %>
              <br>

          <%= f.input :id_number, label: "Contract ID:", placeholder: "Contract ID" %>

          <%=f.input :duration, label: "Duration", as: :string, placeholder: "Contract Duration" %>

          <%= f.input :cost, placeholder: "0.00" %>

          <%=f.input :address, label: "Location", placeholder: "Contract Location" %>
          <%=f.input :implementing_office, label: "Implementing Office" %>

        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-3 col-md-offset-1">
          <h5 class="text-center text-muted"> MAIN CONTRACTOR</h5>
        </div>
        <div class="col-md-8">
          <%=f.input :main_contractor_id, collection: Contractor.main_contractors.map{|a| [a.company.titleize, a]}, as: :radio_buttons, label: false%>
        </div>
    </div>
</div>
<div class="modal-footer">
<%=f.submit "Save Project", class: "btn btn-primary" %>
</div>
<% end %>
</div>
</div>

</div>
