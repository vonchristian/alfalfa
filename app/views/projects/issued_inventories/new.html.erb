<div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header with-border">
      <h4 class="widget-user-username"><%= @work_detail.description %></h4>
    </div>
    <div class="box-body">
      <div class="col-md-8">
        <table class="table table-compressed table-hover">
          <thead>
            <tr>
              <th style="width: 20%">Issued To</th>
              <th style="width: 30%">Description</th>
              <th>Quantity</th>
              <th><span class="pull-right">Unit Cost</span></th>
              <th><span class="pull-right">Total Cost</span></th>
              <th style="width:60px"></th>
            </tr>
          </thead>
          <tbody>
            <% if @work_detail.issued_inventories.present? %>
               <% @work_detail.issued_inventories.each do |issued_inventory| %>
                <tr>
                  <td><%= issued_inventory.inventoriable_id %></td>
                  <td><%= issued_inventory.inventory %></td>
                  <td><%= issued_inventory.quantity %></td>
                  <td><span class="pull-right"><%= number_to_currency issued_inventory.unit_cost %></span></td>
                  <td><span class="pull-right"><%= number_to_currency issued_inventory.total_cost %></span></td>
                  <td></td>
                </tr>
               <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-4">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
