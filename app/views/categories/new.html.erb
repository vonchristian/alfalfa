<div class="row">
<div class='col-md-4 col-md-offset-4'>
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="text-center">Category Details </h4>
      <hr />
       <%= simple_form_for @category do |f| %>
      <%=f.error_notification %>
     
      <%if @category.photo.blank? %>
        <%=image_tag("default-small.png", :class=>"img-square center-block ") %>
        <br>
        <% else %>
        <%= image_tag attachment_url(@photo, :profile_photo, :fill, 150, 150), class: 'center-block img-responsive img-rounded'%>
        <% end %>
        <%= f.file_field :photo, class: 'center-block'%>

      <hr>

        <%=f.input :name, autofocus: true  %>
   
        <div class="modal-footer">
          <%=f.submit 'Save Project Category', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
