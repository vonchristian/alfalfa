
<div class="row">
<div class="col-md-6 col-md-offset-3">
  <!-- Widget: user widget style 1 -->
  <div class="box box-widget widget-user">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header bg-blue-active">
      <h4 class="widget-user-username">categorys
      <span class="pull-right"><%=link_to new_category_path, class: "btn btn-default bg-blue-active pull-right" do %><i class="fa fa-user-plus"></i> New category <%end%></span>
    </h4>
    </div>
    <div class="box-footer">
      <div class="row">
        <div class="col-sm-12 border-right">

          <div>
            <% @categories.each do |category| %>
             <div class="row">
            <div class="col-md-2 col-md-offset-1  col-sm-3 col-xs-3">
            <%= image_tag attachment_url(category, :photo, :fill, 60, 60, format: "jpg", fallback: "default-small.png"),  class: "img-square" %>
            </div>
            <div class="col-md-8 col-sm-9 col-xs-9">
            <h4><%= link_to category.name.upcase%></h4>
            </div>
            </div>
           <hr />
            <% end %>
 

          
          </div><!-- /.description-block -->
        </div><!-- /.col -->

          </div><!-- /.description-block -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div>
  </div><!-- /.widget-user -->
</div><!-- /.col -->
</div>
