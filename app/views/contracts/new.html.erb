<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <div class="row">
          <div class="col-md-8">
            <h3 class="title">#<%= @project.id_number %></h3>
            <h4 class="title"><%= @project.name %></h4>
          </div>
        </div>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-7">
            <div class="header">
              <h4 class="title">List of Contractors for this Project </h4>
              <div class="row"><hr></div>
            </div>
            <div class="content">
              <table class="table table-compressed table-hover">
                <thead>
                  <tr>
                    <th style="width: 30%">Contractor</th>
                    <th><span class="pull-right">Amount</span></th>
                    <th style="width: 10%"></th>
                  </tr>
                </thead>
                <tbody>
                  <% if @project.contracts.present? %>
                    <% @project.contracts.each do |contract| %>
                      <tr>
                        <td><%=contract.contractor.full_name if contract.contractor %> - <%=contract.contractor %></td>
                        <td><b class="pull-right"><%=number_to_currency contract.amount_subcontracted %></b></td>
                        <td></td>
                      </tr>
                    <% end %>
                  <% end%>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col-md-5">
            <%= render 'form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>