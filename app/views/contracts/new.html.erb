<div class="col-md-8 col-md-offset-2">
  <!-- Widget: user widget style 1 -->
  <div class="box box-primary">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="box-header with-border">
      <h4 class="widget-user-username">New Sub Contractor</h4>
    </div>
    <div class="box-body">
      <%= render 'form' %>
      <div class="row">
        <div class="col-md-12">
          <hr>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="box-header with-border">
            <h4>List of Contractors for this Project </h4>
          </div>
          <div class="box-body">
            <table class="table table-compressed table-hover">
              <thead>
                <tr>
                  <th style="width: 30%">Contractor</th>
                  <th style="width: 10%">Amount</th>
                </tr>
              </thead>
              <tbody>
                <% if @project.contracts.present? %>
                  <% @project.contracts.each do |contract| %>
                    <tr>
                      <td><%=contract.contractor %></td>
                      <td><b><%=contract.amount_subcontracted %></b></td>
                    </tr>
                  <% end %>
                <% end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
