<div class="col-md-12">
  <div class="box box-primary">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-md-8">
          <h3>#<%= @project.id_number %></h3>
          <h4 class="widget-user-username"><%= @project.name %></h4>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="col-md-8">
        <div class="box-header with-border">
          <h4>List of Contractors for this Project </h4>
        </div>
        <div class="box-body">
          <table class="table table-compressed table-hover">
            <thead>
              <tr>
                <th style="width: 30%">Contractor</th>
                <th><span class="pull-right">Amount</span></th>
                <th style="width: 10%"></th>
              </tr>
            </thead>
            <tbody>
              <% if @project.contracts.present? %>
                <% @project.contracts.each do |contract| %>
                  <tr>
                    <td><%=contract.contractor %></td>
                    <td><b class="pull-right"><%=number_to_currency contract.amount_subcontracted %></b></td>
                    <td></td>
                  </tr>
                <% end %>
              <% end%>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-4 well">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
