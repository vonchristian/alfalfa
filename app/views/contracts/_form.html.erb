<%= simple_form_for ([@project, @contract]) do |f| %>
  <%=f.error_notification %>
  <table class="table">
    <tbody>
    <tr>
      <td style="width: 70%"><%=f.input :contractor_id, collection: Contractor.all,  label: false, prompt: '-- select contractor --' %></td>
      <td style="width: 30%"><%=f.input :amount_subcontracted, label: false, placeholder: 'Amount' %></td>

    </tr>
    </tbody>
  </table>
  <div class="modal-footer">
    <%=f.submit "Add this Sub Contractor", class: "btn btn-primary" %>
    <%=link_to "or I'm done adding Sub Contractors",project_path(@project) %>
  </div>
<% end %>
<script>
    $(document).ready(function() {
        $("#contract_contractor_id").select2({
            theme: "bootstrap"
        });
    });
</script>