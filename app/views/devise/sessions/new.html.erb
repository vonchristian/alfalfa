<div class="container">
<div class="col-md-4 col-md-offset-4">

<div class="panel panel-default">
<div class="panel-body">
<br>
<br>
<%= simple_form_for(resource, as: resource_name, :url => session_path(resource_name),
       wrapper_mappings: {boolean: :vertical_boolean }) do |f| %>
      
 <%=image_tag("default.png", height: 100, width: 100, class: 'img-circle img-responsive center-block') %>
<br>
 <%= f.input :email, placeholder: "Email", label: false, input_html:{class: "form-control input-lg"} %>
 
 

    <%= f.input :password, placeholder: "Password", label: false, input_html:{class: "form-control input-lg"}  %>
    
    

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <hr>
    <%= f.submit "Sign in", class: "btn btn-success btn-block btn-lg btn-flat" %>
<% end %>
<br>
</div>

</div>

</div>
