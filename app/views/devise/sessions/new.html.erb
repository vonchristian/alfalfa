
<div id="bg">
  <%=image_tag("bg.jpg") %>
</div>
<br>
<br>
  <div class="col-md-8 col-md-offset-2">
    <div class="card">
      <div class="header">
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-6 hidden-xs border-right">
            <br>
            <br>
            <br>
            <br>
            <h4 class="title"><center>Alfalfa  Construction </center></h4>
            <span class="help-block"><center>Ibulao, Baguinge, Kiangan, Ifugao</center></span>
          </div>
          <div class="col-md-5">
            <h4 class="title"><center>Sign in to your Account.</center></h4>
            <br>
            <%= simple_form_for(resource, as: resource_name, :url => session_path(resource_name),
              wrapper_mappings: {boolean: :vertical_boolean }) do |f| %>
              <%=f.error_notification %>
              <%=image_tag("default.png", height: 100, width: 100, class: 'img-circle img-responsive center-block') %>
              <br>
                <%=render 'layouts/flash' %>
              <%= f.input :email, placeholder: "Email", input_html:{class: "form-control"}, label: false, autofocus: true %>
              <%= f.input :password, placeholder: "Password",  input_html:{class: "form-control"}, label: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              <hr>
              <%= f.submit "Sign in", class: "btn btn-success active btn-block btn-flat" %>
              <br>
              <br>
              <br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
