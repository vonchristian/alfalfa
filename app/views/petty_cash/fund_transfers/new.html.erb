<div class="col-md-10 col-md-offset-1">
  <div class="box box-solid">
    <div class="box-header with-border">
      <h4>New Fund Transfer</h4>
    </div>
    <div class="box-body">
      <div class="col-md-7">
        <h4>Today's Fund Transfer</h4>
        <table class="table table-compressed">
          <tbody>
            <%@petty_cash.debit_entries.today.each do |entry| %>
              <tr>
                <td>
                  <%=entry.recipient.try(:name) %>
                </td>
                <!-- <td><%#=entry.date.strftime("%B %e, %Y") %></td> -->
                <td><span class="pull-right"><%=number_to_currency entry.debit_amounts.last.amount %></span></td>
              </tr>
            <%end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>

