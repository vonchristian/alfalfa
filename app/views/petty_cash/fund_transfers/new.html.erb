<div class="container">
         <div class="box box-solid">
         <div class="box-header with-border">
         <h4><center> Fund Transfer Details</center></h4>
         </div>
         <div class="box-body">

                  <%= simple_form_for  @fund_transfer, url: :petty_cash_fund_transfers do |f| %>
  <div class="row">
  <div class="col-md-6">

  </div>
  <div class="col-md-5">
<%=f.input :source_account_id, collection: Account.fund_transfer_sources.map{|a| [a.name.titleize, a.id]}, as: :radio_buttons %>
<%=f.input :amount %>
<%=f.input :recipient_account_id, input_html: { value: "Petty Cash" }, readonly: true, as: :hidden %>
<%= f.input :date, as: :string, input_html: { class: 'datepicker'} %>
<%=f.input :description, as: :text %>
</div>
<div class="modal-footer">
<%=f.submit "Transfer Amount", class: "btn btn-danger" %>
<%=link_to "Cancel", petty_cash_index_path, class: "btn btn-default pull-left" %>
</div>
<% end %>
</div>
</div>


