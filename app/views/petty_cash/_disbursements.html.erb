<div class="active tab-pane" id="disbursements">
  <div class="table table-responsive">
    <table class="table table-compressed">
      <thead>
        <tr class="text-uppercase">
          <th style="width: 30%">Recipient</th>
          <th>Description</th>
          <th>Date</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <%@petty_cash.credit_entries.entered_on(:from_date => @from_date, :to_date => @to_date).each do |entry| %>
          <tr>
            <td><%= image_tag attachment_url(entry.recipient, :photo, :fill, 35, 35, fallback: "default-xs-small.png"),  class: "img-circle" %> <%=entry.recipient.try(:name) %></td>
            <td><%=entry.description %></td>
            <td><%=entry.date.strftime("%B %e, %Y") %></td>
             <td><span class="pull-right"><%=number_to_currency entry.credit_amounts.last.amount %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>