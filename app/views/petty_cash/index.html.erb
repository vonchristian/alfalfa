
  <div class="box box-primary">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-md-4">
          <h4>Petty Cash Account</h4>
        </div>
        <div class="col-md-8">
          <div class="pull-right">
            <%= form_tag({:action => 'index'}, {:method => :get, class: 'form-inline'}) do %>
              <div class="form-group">
                <%= label_tag :from_date, nil, class: 'sr-only' %>
                <%= text_field_tag :from_date, @from_date, class: 'datepicker form-control', placeholder: 'Date' %>
              </div>
              <div class="form-group">
                <%= label_tag :to_date, nil, class: 'sr-only' %>
                <%= text_field_tag :to_date, @to_date, class: 'datepicker form-control', placeholder: 'Date' %>
              </div>
              <button type="submit" class="btn btn-default" format="pdf">Generate Report</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="col-md-8">
        <div class="col-md-12">
          <%=link_to "Print Report(PDF)", petty_cash_index_path(format: 'pdf', :from_date => @from_date, :to_date => @to_date), class: 'btn btn-primary btn-sm pull-right' %>
        </div>
        <ul class="nav nav-tabs" role="tablist">
          <li  role="presentation" class="active">
           <a href="#disbursements" aria-controls="disbursements" role="tab" data-toggle="tab">Disbursements</a>
          </li>
           <li  role="presentation">
             <a href="#fund_transfers" aria-controls="fund_transfers" role="tab" data-toggle="tab">Fund Transfers</a>
          </li>
        </ul>
        <div class="tab-content">
          <%=render 'disbursements' %>
          <%=render 'fund_transfers' %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="well">
            <h3><center><%= number_to_currency @petty_cash.balance(:from_date => @from_date, :to_date => @to_date)  %></center></h3>
            <span class="help-block"><center class="text-uppercase">Balance</center></span>
            <br>
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <%=link_to "New Disbursement", new_petty_cash_disbursement_path(@petty_cash), class: "btn btn-danger btn-block" %>
                <%=link_to "New Fund Transfer", new_petty_cash_fund_transfer_path(@petty_cash), class: "btn btn-success btn-block" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


