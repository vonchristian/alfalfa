
  <div class="box box-primary">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-md-4">
          <h4>Petty Cash Account</h4>
        </div>
        <div class="col-md-8">
          <div class="pull-right">
            <%= form_tag({:action => 'index'}, {:method => :get, class: 'form-inline'}) do %>
              <div class="form-group">
                <%= label_tag :from_date, nil, class: 'sr-only' %>
                <%= text_field_tag :from_date, @from_date, class: 'datepicker form-control', placeholder: 'Date' %>
              </div>
              <div class="form-group">
                <%= label_tag :to_date, nil, class: 'sr-only' %>
                <%= text_field_tag :to_date, @to_date, class: 'datepicker form-control', placeholder: 'Date' %>
              </div>
              <button type="submit" class="btn btn-default" format="pdf">Get Report</button>
              <%=link_to "Print(PDF)", petty_cash_index_path(format: 'pdf', :from_date => @from_date, :to_date => @to_date), class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="col-md-7">
        <h4>Disbursements</h4>
        <div class="table table-responsive">
          <table class="table table-compressed">
            <thead>
              <tr class="text-uppercase">
                <th style="width: 30%">Recipient</th>
                <th>Description</th>
                <th>Date</th> 
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <%@petty_cash.credit_entries.entered_on(:from_date => @from_date, :to_date => @to_date).each do |entry| %>
                <tr>
                  <td><%= image_tag attachment_url(entry.recipient, :photo, :fill, 35, 35, fallback: "default-xs-small.png"),  class: "img-circle" %> <%=entry.recipient.try(:name) %></td>
                  <td><%=entry.description %></td>
                  <td><%=entry.date.strftime("%B %e, %Y") %></td>
                   <td><span class="pull-right"><%=number_to_currency entry.credit_amounts.last.amount %></span></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-5">
        <% balance = @petty_cash.balance(:from_date => @petty_cash.created_at, :to_date => @to_date) %>
        <h3><center><%= number_to_currency balance %></center></h3>
        <span class="help-block"><center class="text-uppercase">Balance</center></span>
        <br>
        <div class="col-md-6 col-sm-12">
          <span><center><%=link_to "New Disbursement", new_petty_cash_disbursement_path(@petty_cash), class: "btn btn-danger" %></center></span>
        </div>
        <br>
        <br>
        <div class="col-md-6 col-sm-12">
          <span><center><%=link_to "New Fund Transfer", new_petty_cash_fund_transfer_path(@petty_cash), class: "btn btn-success" %></center></span>
        </div>
        <br>
        <br>
        <br>
        <h4>Fund Transfers</h4>
        <hr>
        <table class="table">
          <tbody>
            <% @petty_cash.debit_entries.entered_on(:from_date => @from_date, :to_date => @to_date).each do |entry| %> 
              <tr>
                <td><center><%= image_tag attachment_url(entry.recipient, :photo, :fill, 35, 35, fallback: "default-xs-small.png"),  class: "img-circle" %><br><%=entry.recipient.try(:name) %></center></td>
                <td style="line-height: 35px"><%=entry.description %></td>
                <td style="line-height: 35px"><%=entry.date.strftime("%B %e, %Y") %></td>
                <td style="line-height: 35px"><span class="pull-right"><%=number_to_currency entry.debit_amounts.last.amount %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>


