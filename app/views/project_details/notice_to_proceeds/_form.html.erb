<%= simple_form_for [@project, @notice_to_proceed],  url: :project_notice_to_proceed, html: { class: 'form-horizontal' },
                            wrapper: :horizontal_form,
                            wrapper_mappings: {
                            check_boxes: :vertical_radio_and_checkboxes,
                            radio_buttons: :vertical_radio_and_checkboxes,
                            file: :horizontal_file_input,
                            boolean: :horizontal_boolean
                            } do |f| %>
<%=f.error_notification %>
<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="widget-user-username">Notice to Proceed</h3>
    </div>
    <div class="panel-body">
      <%=f.input :date, as: :string, input_html:{:class => 'datepicker'} %>
    </div>
    <div class="modal-footer">
      <%= link_to 'Cancel', @project, class: 'btn btn-default pull-left' %>
      <%=f.submit "Save", class: "btn btn-primary pull-right" %>
    </div>
  </div>
</div>
<% end %>

