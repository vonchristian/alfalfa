<div class="col-md-6 col-md-offset-3">
  <div class="card">
    <div class="header">
      <h4 class="title"> Overtime Details </h4>
    </div>
    <div class="content">
      <%=simple_form_for [@employee, @overtime], url: :employee_overtimes do |f| %>
        <%=f.error_notification %>
        <%=f.input :number_of_hours %>
        <div class="row">
          <div class="col-md-6">
            <%=f.input :start_date, as: :string, input_html: { class: "datetimepicker" } %>
          </div>
          <div class="col-md-6">
            <%=f.input :end_date, as: :string, input_html: { class: "datetimepicker" } %>
          </div>
        </div>
        <div class="modal-footer">
          <%= link_to "Cancel", @employee, class: 'btn btn-xs pull-left' %>
          <%=f.submit "Save Overtime", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
