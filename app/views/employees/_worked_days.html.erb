<div class="col-md-4">
  <div class="card">
    <div class="header">
      <h4 class="title">Days Worked
        <span class="pull-right">
          <%=link_to new_employee_worked_day_path(@employee), title: 'Add Days Worked' do %>
            <span class="btn btn-info btn-icon-sm" data-toggle="tooltip" data-placement="bottom" title="Add Days Worked"><i class="fa fa-plus"></i></span>
          <% end %>
        </span>
      </h4>
      <div class="row"><hr></div>
    </div>
    <div class="content">
      <table class="table table-hover">
        <thead>
          <tr>
            <th># of Days</th>
            <th>Amount</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @employee.worked_days.order(:created_at).reverse.each do |work| %>
            <tr>
              <td><%=work.number_of_days %> Days</td>
              <td><%=work.start_date.strftime("%b %e, %Y")%>- <%=work.end_date.strftime("%b %e, %Y") %></td>
              <td>
                <% if work.paid? %>
                  <span class="btn btn-success btn-icon" title="Paid"><i class="fa fa-check"></i></span>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>