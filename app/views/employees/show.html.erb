<div class="row">
                    <div class="col-lg-4 col-md-5">
                        <div class="card card-user">
                            <div class="image">
                                <%= image_tag "hero.jpg", class: "img-square center-block", alt: "employee profile picture" %>
                            </div>
                            <div class="content">
                                <div class="author">
                                  <%= image_tag @employee.profile_photo.url(:medium), class: "avatar border-white", alt: "employee profile picture" %>
                                  <h4 class="title"><%=@employee.full_name %><br />
                                     <a href="#"><small><%=@employee.position.try(:titleize) %></small></a>
                                  </h4>
                                </div>
                                <br>
                                <p class="description text-center">

                                </p>
                            </div>
                            <hr>
                            <br>
                            <div class="text-center">
                                <div class="row">
                                    <div class="col-md-2">

                                    </div>
                                    <div class="col-md-8">
                                          <%=link_to "Update", edit_employee_path(@employee), class: "btn btn-primary btn-block" %>
                                    </div>
                                    <div class="col-md-2">

                                    </div>
                                </div>
<br>
                            </div>
                        </div>
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Info</h4>
                            </div>
                            <div class="content">
                                <ul class="list-unstyled team-members">
                                            <li>
                                                <div class="row">
                                                    <div class="col-xs-3">
                                                        <div class="avatar">

                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6">
                                                        DJ Khaled
                                                        <br />
                                                        <span class="text-muted"><small>Offline</small></span>
                                                    </div>

                                                    <div class="col-xs-3 text-right">
                                                        <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-check"></i></btn>
                                                    </div>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="row">
                                                    <div class="col-xs-3">
                                                        <div class="avatar">
                                                            <img src="assets/img/faces/face-1.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6">
                                                        Creative Tim
                                                        <br />
                                                        <span class="text-success"><small>Available</small></span>
                                                    </div>

                                                    <div class="col-xs-3 text-right">
                                                        <btn class="btn btn-sm btn-danger btn-icon"><i class="fa fa-times"></i></btn>
                                                    </div>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="row">
                                                    <div class="col-xs-3">
                                                        <div class="avatar">
                                                            <img src="assets/img/faces/face-3.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6">
                                                        Flume
                                                        <br />
                                                        <span class="text-danger"><small>Busy</small></span>
                                                    </div>

                                                    <div class="col-xs-3 text-right">
                                                        <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                            </div>
                        </div>
                      </div>
                        <div class="col-md-4">
                          <div class="card">
                              <div class="header">
                                  <h4 class="title">Cash Advances
                                  <span class="pull-right">
                                    <%=link_to new_employee_cash_advance_path(@employee) do %>
                                        <span class="btn btn-info btn-icon"><i class="fa fa-plus"></i> New Cash Advance </span>
                                    <% end %>

                                  </h4>
                                  <hr>
                              </div>
                              <div class="content">
                                <% @employee.cash_advances.each do |cash_advance| %>
                                <div class="row">
                                  <div class="col-xs-6">
                                    <%=cash_advance.date.strftime("%B %e, %Y") %>
                                  </div>
                                  <div class="col-xs-4">
                                    <%=number_to_currency cash_advance.debit_amounts.sum(:amount) %>
                                  </div>
                                  <div class="col-xs-2">
                                    <span class="btn btn-success btn-icon"><i class="fa fa-check"></i></span>
                                  </div>
                                </div>
                                <hr>
                                <% end %>
                              </div>
                          </div>
                        </div>
                      
