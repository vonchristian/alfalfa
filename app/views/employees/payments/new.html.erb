<div class="col-md-4 col-md-offset-4">
<div class="box box-solid card">
<div class="box-header with-border">
<h4><center>Pay Slip Detail</center></h4>
<span><center><%=Time.zone.now.strftime("%B %e, %Y") %></center></span>

</div>
<div class="box-body">
<div class="row">
<div class="col-md-6">
<h4 class="text-muted">EMPLOYEE INFO</h4>
<h4><%=@employee.full_name %></h4>
<span class="help-block"><%=@employee.position.titleize %></span>
</div>
<div class="col-md-6">
<h4 class="text-muted">PAY PERIOD</h4>
<p><%=Time.zone.now.beginning_of_month.strftime("%B %e")  %> - <%=Time.zone.now.end_of_month.strftime("%e, %Y")  %></p>
</div>
</div>
<hr>
<h4 class="text-muted">Days Worked<span class="pull-right"><%=@employee.unpaid_worked_days%> Days </h4>
<h4 class="text-muted">Rate <span class="pull-right"><%=number_to_currency @employee.rate%></h4>
<h4 class="text-danger">Cash Advances <span class="pull-right"> - <%=number_to_currency @employee.unpaid_cash_advances %></h4>
<h4>Earned Income <span class="pull-right"><%=number_to_currency @employee.earned_income %></h4>
<hr>

<%=simple_form_for [@employee, @payment] do |f| %>
<div class="row">
<div class="col-md-8">
<h4 class="pull-right">Gross Pay:</h4>
</div>
<div class="col-md-4">
<h3><%=f.input :amount, label: false, input_html: {value: @employee.gross_pay, class: "input-lg" }, readonly: true %></h3>
</div>
</div>
<div class="modal-footer">
<%=f.submit "Pay Employee", class: "btn btn-primary" %>
</div>
<% end %>


