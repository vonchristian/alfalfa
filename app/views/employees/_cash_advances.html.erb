<div class="col-md-4">
    <div class="card">
      <div class="header">
        <h4 class="title">Cash Advances
          <span class="pull-right">
            <%=link_to new_employee_cash_advance_path(@employee), title: 'New Cash Advance' do %>
              <span class="btn btn-danger btn-icon-sm" data-toggle="tooltip" data-placement="bottom" title="New Cash Advance"><i class="fa fa-plus"></i></span>
            <% end %>
          </span>
        </h4>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Amount</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @employee.cash_advances.order(:date).reverse.each do |cash_advance| %>
              <tr>
                <td><%=cash_advance.date.strftime("%B %e, %Y") %></td>
                <td><%=number_to_currency cash_advance.debit_amounts.sum(:amount) %></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>