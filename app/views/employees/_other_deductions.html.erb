
<div class="card">
  <div class="header">
    <h4 class="title">Other Deductions
      <span class="pull-right">
        <%=link_to "New", new_employee_other_deduction_path(@employee), class: 'btn btn-primary' %>
      </span>
    </h4>
    <div class="row"><hr></div>
  </div>
  <div class="content">
    <table class="table table-hover">
      <thead>
        <tr class="title">
          <th>Date</th>
          <th>Description </th>
          <th>Amount</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @employee.advanced_ppes.order(:date).reverse.each do |deduction| %>
          <tr>
            <td><%=deduction.date.strftime("%B %e, %Y") %></td>
            <td> <%=deduction.description %></td>
            <td><%=number_to_currency deduction.debit_amounts.sum(:amount) %></td>
            <td>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
