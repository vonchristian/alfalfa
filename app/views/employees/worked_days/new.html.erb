<%= simple_form_for [@employee, @worked_day] do |f| %>
<%=f.error_notification %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
  <!-- Widget: user widget style 1 -->
    <div class="box box-primary">
    <!-- Add the bg color to the header using any of the bg-* classes -->
      <div class="box-header">
        <h3 class="widget-user-username">Worked Days Detail</h3>
      </div>
      <div class="box-body">
        <%=f.input :number_of_days, autofocus: true %>
        <div class="row">
          <div class="col-md-6">
            <%=f.input :start_date, as: :string, input_html:{class: "datepicker"}, label: "From" %>
          </div>
          <div class="col-md-6">
            <%=f.input :end_date, as: :string, input_html:{class: "datepicker"}, label: "To" %>
          </div>
        </div>
      </div>
      <div class="box-footer">
        <%= link_to 'Cancel', @employee , class: 'btn btn-default' %>
        <%=f.submit "Save", class: "btn btn-primary pull-right" %>
      </div>
    </div>
  </div>
</div>
<% end %>