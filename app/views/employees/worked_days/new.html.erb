<div class="row">
<div class="col-md-4 col-md-offset-4">
  <!-- Widget: user widget style 1 -->
  <div class="box box-widget widget-user">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header bg-blue-active">
      <h3 class="widget-user-username">Days Worked Detail</h3>
    </div>
    <div class="box-footer">
      <div class="row">
        <div class="col-sm-12 border-right">
          <div>


 <%= simple_form_for [@employee, @worked_day] do |f| %>
<%=f.error_notification %>
<%=f.input :number_of_days, autofocus: true %>
<div class="row">
  <div class="col-md-6">
<%=f.input :start_date, as: :string, input_html:{class: "datepicker"}, label: "From" %>
</div>
<div class="col-md-6"
<%=f.input :end_date, as: :string, input_html:{class: "datepicker"}, label: "To" %>
</div>
</div>
<div class="modal-footer">
<%=f.submit "Save", class: "btn btn-primary" %>
</div>
<% end %>

 </div>
