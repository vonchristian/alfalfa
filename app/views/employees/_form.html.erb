<%= simple_form_for @employee do |f| %>
<%=f.error_notification %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="box box-solid">
      <div class="box-header with-border">
        <h4 class="text-center">Employee Details </h4>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-4 col-md-offset-1">
            <%if @employee.photo.blank? %>
              <%=image_tag("default-small.png", :class=>"img-square center-block ") %>
              <br>
            <% else %>
              <%= image_tag attachment_url(@employee, :photo, :fill, 150, 150), class: 'center-block img-responsive img-rounded'%>
            <% end %>
            <%= f.file_field :photo, class: 'center-block'%>
          </div>
          <div class="col-md-1">
          </div>
          <div class="col-md-5">
            <%=f.input :first_name, autofocus: true,  placeholder: "First Name" %>
            <%=f.input :last_name, placeholder: "Last Name"  %>
            <%=f.input :mobile_number,  placeholder: "Mobile Number" %>
            <%=f.input :email, placeholder: "Email"  %>
            <% if current_user.accounting_officer? %>
              <%=f.input :position, collection: Employee.positions.keys.to_a.map{ |a| [a.titleize, a] }, prompt: '-- Select --'  %>
            <% end %>
            <%=f.input :rate  %>
          </div>
        </div>
      </div>
      <div class="box-footer">
        <%=f.submit 'Save Employee', class: 'btn btn-primary pull-right' %>
      </div>
    </div>
  </div>
</div>
<% end %>
