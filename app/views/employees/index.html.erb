<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <div class="row">
          <div class="col-md-3">
            <h4 class="title"> List of Employees</h4>
          </div>
          <div class="col-md-6">
            <%=form_tag employees_path, class: 'sidebar-form', method: :get do %>
              <div class="input-group">
                <%=text_field_tag :name, params[:name], class: 'form-control border-input', placeholder: 'Search Employee...' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-3">
            <%=link_to new_employee_path do %>
              <span class="btn btn-primary btn-icon pull-right"><i class="fa fa-user-plus"></i> New employee </span>
            <% end %>
          </div>
        </div>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <table class="table table-striped">
          <thead>
            <tr class="title">
              <th width="50px"></th>
              <th>Employee </th>
              <th>Position</th>
              <th>Rate</th>
            </tr>
          </thead>
          <tbody>
            <%@employees.each do |employee| %>
              <tr>
                <td><%=image_tag(employee.profile_photo.url(:small), class: "img-circle img-responsive") %></td>
                <td><span class="text-uppercase text-light-gray"><%=link_to employee.full_name, employee, class: "text-light-gray" %></span></td>
                <td> <%= employee.position.try(:titleize) %> </td>
                <td> <%= number_to_currency employee.rate %> </td>
              </tr>
            <%end %>
          </tbody>
        </table>
        <div class="modal-footer">
          <center><%= paginate @employees, :window => 1 %></center>
        </div>
      </div>
    </div>
  </div>
</div>
