<div class="row">
<div class='col-md-4 col-md-offset-4'>
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="text-center">Employee Details </h4>
      <hr />
       <%= simple_form_for @employee do |f| %>
      <%=f.error_notification %>

      <%if @employee.photo.blank? %>
        <%=image_tag("default-small.png", :class=>"img-square center-block ") %>
        <br>
        <% else %>
        <%= image_tag attachment_url(@employee, :profile_image, :fill, 150, 150), class: 'center-block img-responsive img-rounded'%>
        <% end %>
        <%= f.file_field :photo, class: 'center-block'%>

      <hr>
<div class="row">
    <div class="col-md-6">
        <%=f.input :first_name, autofocus: true, label: false, placeholder: "First Name" %>
        </div>
        <div class="col-md-6">
        <%=f.input :last_name, label: false, placeholder: "Last Name"  %>
        </div>
        </div>

        <div class="row">
<div class="col-md-6">
        <%=f.input :mobile_number, label: false, placeholder: "Mobile Number" %>
        </div>
        <div class="col-md-6">
        <%=f.input :email, label: false, placeholder: "Email"  %>
        </div>
        </div>
   <%=f.input :position, label: false,  collection: Employee.positions.keys.to_a.map{ |a| [a.titleize, a] }  %>
        <div class="modal-footer">
          <%=f.submit 'Save Employee', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
