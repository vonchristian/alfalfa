<header class="main-header">
      <!-- Logo -->
      <%=link_to site_name, root_path, class: 'logo' %></b>
      <!-- Header Navbar: style can be found in header.less -->
      <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
          <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="col-md-8 pull-left">
          <ul class="nav navbar-nav">
            <li class="dropdown mega-dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Create <span class="fa fa-chevron-down pull-right"></span></a>
              <ul class="dropdown-menu mega-dropdown-menu row">
                <li class="col-sm-3">
                  <ul>
                    <li class="dropdown-header">Projects</li>
                    <li><a href="/projects/new">Add New Project</a></li>
                    <li class="divider"></li>
                    <li class="dropdown-header">Project Report</li>
                    <li><a href="#">Summary</a></li>
                  </ul>
                </li>
                <li class="col-sm-3">
                  <ul>
                    <li class="dropdown-header">Accounts</li>
                    <li><a href="/petty_cash">Petty Cash</a></li>
                    <li><a href="#">Checking Account</a></li>
                    <li><a href="#">Cash Advance</a></li>
                    <li><a href="#">Pay Bills</a></li>
                  </ul>
                </li>
                <li class="col-sm-3">
                  <ul>
                    <li class="dropdown-header">Contractors</li>
                    <li><a href="contractors/new">New Contractor</a></li>
                    <li><a href="#">Expense</a></li>
                    <li><a href="#">Bill </a></li>
                    <li><a href="#">Material Request </a></li>
                  </ul>
                </li>
                <li class="col-sm-3">
                  <ul>
                    <li class="dropdown-header">Accounts</li>
                    <li><a href="#">General Ledger</a></li>
                    <li><a href="#">Bank Account</a></li>
                    <li><a href="#">Chart of Accounts</a></li>
                    <li><a href="#">Income Statement</a></li>
                  </ul>
                </li>
              </ul>
            </li>
          </ul>
          <div>
            <%=form_tag result_index_path, class: 'nav-search', method: :get do %>
              <div class="input-group">
                <%=text_field_tag :query, params[:query], class: 'form-control', placeholder: 'What do you want to find?' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', class: "btn btn-flat btn-default") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        </div>

        <div class="navbar-custom-menu pull-right">

          <ul class="nav navbar-nav">

            <!-- User Account: style can be found in dropdown.less -->
            <li class="dropdown user user-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= image_tag attachment_url(current_user, :profile_photo, :fill, 20, 20, fallback: "default-xs-small.png"), class: 'user-image' %>
                <span class="hidden-xs"><%=current_user.full_name %></span>
              </a>
              <ul class="dropdown-menu">
                <!-- User image -->
                <li class="user-header">
                  <%= image_tag attachment_url(current_user, :profile_photo, :fill, 150, 150, fallback: "default-small.png") %>
                  <p>
                    <%=current_user.full_name %>
                    <small><%=current_user.role.to_s.titleize %></small>
                  </p>
                </li>
                <!-- Menu Body -->

                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-left">
                     <%=link_to 'Profile', user_path(current_user), class: "btn btn-default btn-flat" %>
                  </div>
                  <div class="pull-right">
                   <%=link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-danger btn-flat" %>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
    </header>
