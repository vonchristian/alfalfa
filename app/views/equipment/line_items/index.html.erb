<div class="card">
  <div class="header">
    <h4 class="title">Fuel and Lubrication
      <% if @line_items.present? %>
        <%=link_to supplies_equipment_path(@equipment, format: 'pdf') do %>
          <span class="btn btn-info pull-right" title="View PDF Report"><i class="fa fa-print"></i>Print(PDF)</span>
        <% end %>
      <% else %>
        <%=link_to nil do %>
          <span class="btn disabled pull-right" data-toggle="tooltip" data-placement="bottom" title="View PDF Report"><i class="fa fa-print"></i>Print(PDF)</span>
        <% end %>
      <% end %>
    </h4>
    <p class="category"><%= @equipment.name %></p>
    <div class="row"><hr></div>
  </div>
  <div class="content">
    <table class="table table-hover">
      <thead>
        <tr class="text-uppercase">
          <th>Date Issued</th>
          <th>Purpose</th>
          <th>Quantity</th>
          <th>Total Cost</th>
        </tr>
      </thead>
      <tbody>
        <% @line_items.each do |line_item| %>
          <tr>
            <td><%=line_item.date.strftime("%B %e, %Y") %></td>
            <td><%=line_item.order.purpose %></td>
            <td><%=line_item.quantity %> <%=line_item.inventory.unit %></td>
            <td><%=number_to_currency line_item.total_cost %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="modal-footer">
      <center><%= paginate @line_items, :window => 1 %></center>
    </div>
  </div>
</div>
