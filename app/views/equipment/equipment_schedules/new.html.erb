<%= simple_form_for [@equipment, @equipment_schedule] do |f| %>
<%=f.error_notification %>
  <div class="col-md-5 col-md-offset-3">
    <div class="card">
      <div class="header">
        <h4 class="title">Equipment Schedule Details</h4>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <%=f.input :project_id, collection: Project.all.map{ |a| [a.id_number_and_location, a.id]}  %>
        <%=f.input :employee_id, collection: Employee.all.operator %>
        <div class="modal-footer">
          <%=link_to "Cancel", @equipment, class: "btn btn-xs pull-left" %>
          <%=f.submit "Save Schedule", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script>
  $(document).ready(function() {
    $("#equipment_schedule_project_id").select2({
      theme: "bootstrap"
    });
  });
</script>
<script>
  $(document).ready(function() {
    $("#equipment_schedule_employee_id").select2({
      theme: "bootstrap"
    });
  });
</script>
