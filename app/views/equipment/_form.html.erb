<%= simple_form_for @equipment do |f| %>
<%=f.error_notification %>
  <div class="col-md-10 col-md-offset-1">
    <div class="box box-solid">
      <div class="box-body">
        <div class="row">
          <div class="col-md-7">
          </div>
          <div class="col-md-5">
            <div class="box-header with-border">
              <h4>Details</h4>
            </div>
            <div class="box-body">
              <%= f.input :make,  placeholder: 'Equipment Name' %>
              <%=f.input :model,  placeholder: 'Model' %>
              <%=f.input :plate_number,  placeholder: 'Plate Number' %>
              <%=f.input :acquisition_cost, placeholder: 'Acquisition Cost' %>
              <%=f.input :acquisition_date, placeholder: 'Acquisition Date', as: :string, input_html: {class: "datepicker"} %>
            </div>
            <div class="box-footer">
              <div class="pull-right">
                <%=f.submit "Save Equipment", class: "btn btn-primary btn-sm" %>
                <br><br>
                <%= link_to "I'm done adding equipments.", equipment_index_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
