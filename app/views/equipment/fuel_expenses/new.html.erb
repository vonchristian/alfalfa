<%= simple_form_for [@equipment, @fuel_expense], url: :equipment_fuel_expenses do |f| %>
<%=f.error_notification %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="card">
        <div class="header">
          <h4 class="title">Details</h4>
          <div class="row"><hr></div>
        </div>
        <div class="content">      
          <%=f.input :inventory_id, input_html: {value: Inventory.find_by_name("Diesel Fuel").id}, as: :hidden  %>
          <%=f.input :date_issued, as: :string, input_html:{class: "datetimepicker"} %>
          <%=f.input :quantity, placeholder: 'Quantity', input_html:{id: "quantity", oninput: "calculate()"} %>
          <%=f.input :unit_cost,  placeholder: 'Inventory Cost', input_html:{id: "unit_price", value: :inventory_cost, oninput: "calculate()"}  %>
          <%=f.input :total_cost,  placeholder: 'Total Cost', readonly: true ,  input_html:{id: "amount"}%>
          <div class="modal-footer">
            <%=link_to "Cancel", @equipment, class: "btn btn-xs pull-left" %>
            <%=f.submit "Save Fuel Expense", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

