<div class="card">
	<div class="header">
		<h4 class="title">Repairs and Maintenance
      <span class="pull-right"><%=link_to "New", new_supplies_equipment_item_path(@equipment), class: "btn btn-primary" %>
    </h4>
		<div class="row"><hr></div>
	</div>
	<div class="content">
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Total Cost</th>
        </tr>
      </thead>
      <tbody>
        <% @equipment.items.each do |item| %>
          <tr>
            <td>
              <%= item.date.strftime("%B %e, %Y") %><br>
              <span class="text-muted"><%= item.reference_number %></span>
              </td>
            <td><%= item.description %><br>
                <span class="text-muted"><%= item.unit_cost %></span></td>
            <td><%= item.quantity%> <%= item.unit %></td>
            <td><%= number_to_currency item.total_cost%></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3"></th>
          <th><%#= number_to_currency @equipment.items.sum(:total_cost)%></th>
        </tr>
      </tfoot>
    </table>
	</div>
</div>
