<div class="card">
  <div class="header">
    <h4 class="title">Fuel and Lubrication
      <span class="pull-right"><%=link_to "New", supplies_fuel_monitoring_index_path, class: "btn btn-primary" %></span>
    </h4>
    <div class="row"><hr></div>
  </div>
  <div class="content">
    <table class="table table-hover">
      <thead>
        <tr class="text-uppercase">
          <th>Date Issued</th>
          <th>Quantity</th>
          <th>Total Cost</th>
        </tr>
      </thead>
      <tbody>
        <% @line_items.each do |line_item| %>
          <tr>
            <td><%=line_item.date.strftime("%B %e, %Y") %></td>
            <td><%=line_item.quantity %> <%=line_item.inventory.unit %></td>
            <td><%=number_to_currency line_item.total_cost %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <center><%= link_to 'View All', equipment_line_items_path(@equipment) %></center>
    <div class="modal-footer">
      <center><%= paginate @line_items, :window => 1 %></center>
    </div>
  </div>
</div>
