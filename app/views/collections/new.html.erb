<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-primary">
      <div class="box-header">
        <h4 class="text-center">New Collection Details</h4>
        <hr>
      </div>
      <div class="box-footer">
        <%= simple_form_for [@project, @collection], html: { class: 'form-horizontal' }, wrapper: :horizontal_form  do |f| %>
            <%=f.error_notification %>
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <%=f.input :date, as: :string, input_html:{class: "datepicker"} %>
                <%=f.input :amount, as: :string %>
              </div>
            </div>
            <div class="modal-footer">
              <%=f.submit "Save Collection", class: "btn btn-primary btn-flat bg-blue-active" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

 
