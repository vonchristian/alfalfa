<%= simple_form_for @issued_inventory do |f| %>
<%=f.error_notification %>
  <div class="well">
    <h4>Issue Inventory</h4>
    <hr>
    <%=f.input :inventoriable_id, label:  false, collection: Project.all.map{ |a| [a.name, a.id]}, prompt: "Select Project", input_html: {class: 'input-sm'} %>
    <%=f.input :inventory_id, label: false, collection: Inventory.all, prompt: "Select Material", input_html: {style: 'width:100%;height:30px'} %>
    <%=f.input :contractor_id, label:  false, collection: Contractor.all.map{ |a| [a.name, a.id]}, prompt: "Select Contractor", input_html: {class: 'input-sm'} %>
    <%=f.input :date_issued, label: false, as: :string, placeholder: 'Issue Date', input_html:{class: "datetimepicker input-sm"} %>
    <%=f.input :quantity, label: false, placeholder: 'Quantity', input_html:{id: "quantity", oninput: "calculate()", class: 'input-sm'} %>
    <%=f.input :unit_cost, label: false, placeholder: 'Inventory Cost', input_html:{id: "unit_price", value: :inventory_cost, oninput: "calculate()", class: 'input-sm'}  %>
    <%=f.input :total_cost, label: false,  placeholder: 'Total Cost', readonly: true ,  input_html:{id: "amount", class: 'input-sm'}%>
    <div class="row">
      <div class="modal-footer">
        <%=f.submit "Issue Inventory", class: "btn btn-primary btn-sm" %>
        <hr>
        <%=link_to "I'm done issuing inventories", inventories_path %>
      </div>
    </div>
  </div>
<% end %>
<script>
    $(document).ready(function() {
        $("#issued_inventory_inventory_id").select2({
            theme: "bootstrap"
        });
    });
</script>
<script>
    $(document).ready(function() {
        $("#issued_inventory_inventoriable_id").select2({
            theme: "bootstrap"
        });
    });
</script>
<script>
    $(document).ready(function() {
        $("#issued_inventory_contractor_id").select2({
            theme: "bootstrap"
        });
    });
</script>
