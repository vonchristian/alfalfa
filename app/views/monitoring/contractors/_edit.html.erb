<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Editing Contractor</h4>
    </div>
    <%= simple_form_for [:monitoring, @contractor], url: :monitoring_contractor, multipart: true, remote: true do |f| %>
    <%=f.error_notification %>
      <div class="modal-body">
        <ul class="errors text-danger">
        </ul>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= image_tag @contractor.profile_photo.url(:medium), class: 'center-block img-rounded'%>
        <center><%= f.input :profile_photo, class: 'center-block', as: :file %></center>
        <br>
        <div class="row">
          <div class="col-md-6">
            <%=f.input :first_name, autofocus: true, label: false, placeholder: "First Name" %>
          </div>
          <div class="col-md-6">
            <%=f.input :last_name, label: false, placeholder: "Last Name"  %>
          </div>
        </div>
        <%=f.input :company, label: false, placeholder: "Company Name" %>
        <%=f.input :position, label: false, placeholder: "Position" %>
        <%=f.input :main_contractor, label: "Main Contractor?" %>
        <div class="modal-footer">
          <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
          <%=f.submit 'Update', class: 'btn btn-primary active' %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
