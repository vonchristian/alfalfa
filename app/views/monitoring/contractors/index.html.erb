<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="content">
        <div class="row">
          <div class="col-md-6">
            <%=form_tag monitoring_contractors_path, class: 'sidebar-form', method: :get do %>
              <div class="input-group">
                <%=text_field_tag :name, params[:name], class: 'form-control border-input', placeholder: 'Search Contractor...' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-6">
            <%=link_to new_contractor_path do %>
              <span class="btn btn-primary btn-icon pull-right"><i class="fa fa-user-plus"></i> New Contractor </span>
            <% end %>
          </div>
        </div>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Contractor </th>
              <th>Company</th>
              <th>Position</th>
              <th> Projects</th>
            </tr>
          </thead>
          <tbody>
            <%@contractors.each do |contractor| %>
              <tr>
                <td><%=image_tag(contractor.profile_photo.url(:thumb), class: "img-circle img-responsive") %></td>
                <td> <%=link_to contractor.full_name, contractor %></td>
                <td> <%= contractor.company %> </td>
                <td> <%= contractor.position %> </td>
                <td> <%= contractor.contracts.count %> </td>
              </tr>
            <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
