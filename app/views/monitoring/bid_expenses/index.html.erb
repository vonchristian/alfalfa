<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="header">
				<h4 class="title">Bid Expenses
					<span class="pull-right"><%= link_to 'New Bid Expense', new_monitoring_project_bid_expense_path(@project), class: 'btn btn-primary' %></span>
				</h4>
				<div class="row"><hr></div>
			</div>
			<div class="content">
				<table class="table table-hover ">
					<thead>
						<tr>
							<th>Date</th>
							<th>Description</th>
							<th>Cost</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @project.bid_expenses.each do |bid_expense| %>
							<tr>
								<td><%= bid_expense.date.strftime("%B %e, %Y") if bid_expense.date.present? %></td>
								<td><%= bid_expense.description %></td>
								<td><%= number_to_currency bid_expense.amount %></td>
								<td>
									<span class="pull-right"><%= link_to "Update", edit_monitoring_project_bid_expense_path(@project, bid_expense.id), class: 'btn btn-warning' %></span>
								</td>
							</tr>
						<% end %>
					</tbody>
					<tfoot>
						<tr>
							<th colspan="2" class="text-right">Total:</th>
							<th colspan="2"><%= number_to_currency @project.bid_expenses.sum(:amount) if @project.bid_expenses.present? %></th>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
	</div>
</div>