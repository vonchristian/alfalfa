<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Sub Contract Cost</h4>
    </div>
    <%=simple_form_for [@project, @sub_contract_cost], url: :monitoring_project_sub_contract_costs, remote: true do |f| %>
    <%= f.error_notification %>
      <div class="modal-body">
        <ul class="errors text-danger">
        </ul>
        <%=f.input :date, as: :string, input_html: { class: "date_picker" } %>
        <%=f.input :costable_type, input_html: {value: "Contractor"}, as: :hidden %>
        <%=f.input :costable_id, collection: @project.contractors, label: "Contractor" %>
        <%=f.input :total_cost, label: "Amount" %>
        <%=f.input :description, as: :text %>
      </div>
      <div class="modal-footer">
        <%#= link_to 'Cancel', monitoring_project_path(@project), class: 'btn btn-default pull-left' %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
        <%=f.submit "Save", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('.date_picker').datetimepicker({
      format: 'MMMM DD, YYYY',
      showClose: true,
        widgetPositioning: {
              horizontal: 'auto',
              vertical: 'auto'
        }
    });
  });
</script>