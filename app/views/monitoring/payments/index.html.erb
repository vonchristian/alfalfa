<div class="col-md-12">
  <div class="row">
    <div class="card">
      <div class="header">
        <h4 class="title">Payments</h4>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <table class="table">
          <thead>
            <tr>
              <th width="60%">Project Name</th>
              <th><span class="pull-right">Amount Collected</span></th>
              <th><span class="pull-right">Amount Remaining</span></th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%=link_to project.name.truncate(200), project_payments_path(project) %></td>
                <td><span class="pull-right"><%= number_to_currency project.total_payments %></span></td>
                <td><span class="pull-right"><%= number_to_currency project.remaining_payments %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>
