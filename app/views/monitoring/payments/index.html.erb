<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <h4 class="title">List of Projects </h4>

            </div>
      <div class="content">
        <table class="table">
          <thead>
            <tr class="text-uppercase">
              <th>Name</th>
              <th>Amount</th>
              <th>Collected </th>
              <th> Remaining </th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to project.name.truncate(250), monitoring_project_payments_path(project_id: project.id) %></td>
                <td><%= number_to_currency project.cost %> </td>
                <td><%= number_to_currency project.total_collection %></td>
                <td><%= number_to_currency project.remaining_collection %></td>

              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
