<div class="col-md-5 col-md-offset-3">
  <div class="card">
    <div class="header">
      <h4 class="title">New Sub-Contractor</h4>
    </div>
    <div class="content">
      <%= simple_form_for [@project, @contract], url: :monitoring_project_contracts do |f| %>
        <%=f.error_notification %>
        <%=f.input :contractor_id, collection: Contractor.all.map{|a| [a.company, a.id]}, as: :radio_buttons %>
        <%=f.input :amount_subcontracted%>
        <div class="modal-footer">
          <%=f.submit "Save Contract", class: "btn btn-primary" %>
          <%=link_to "Cancel",monitoring_project_path(@project), class: "btn btn-default pull-left" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    $("#contract_contractor_id").select2({
        theme: "bootstrap"
    });
  });
</script>
