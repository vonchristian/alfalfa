<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <h4 class="title">Issued Materials
          <% if @project.line_items.present? %>
            <%=link_to monitoring_project_line_items_path(format: 'pdf') do %>
              <span class="btn btn-info pull-right" data-toggle="tooltip" data-placement="bottom" title="View PDF Report"><i class="fa fa-print"></i>Print(PDF)</span>
            <% end %>
          <% else %>
            <%=link_to nil do %>
              <span class="btn disabled pull-right" data-toggle="tooltip" data-placement="bottom" title="View PDF Report"><i class="fa fa-print"></i>Print(PDF)</span>
            <% end %>
          <% end %>
        </h4>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Description/Price</th>
              <th>Quantity</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <% @project.line_items.each do |line_item| %>
              <tr>
                <td><%=line_item.quantity %> <%=line_item.inventory.unit %></td>
                <td>
                  <%=line_item.inventory.name%>
                  <br />
                  <span class="text-muted"><small><%=number_to_currency line_item.inventory.price %></small></span>
                </td>
                <td><%=number_to_currency line_item.total_price %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
