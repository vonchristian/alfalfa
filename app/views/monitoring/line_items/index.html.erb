<%=link_to "View PDF", monitoring_project_line_items_path(format: "pdf") %>
<% @project.line_items.each do |line_item| %>
<ul class="list-unstyled team-members">
  <li id="current_item">
    <div class="row">
      <div class="col-xs-2">
          <%=line_item.quantity %> <%=line_item.inventory.unit %>
      </div>
      <div class="col-xs-5">
        <%=line_item.inventory.name%>
        <br />
        <span class="text-muted"><small><%=number_to_currency line_item.inventory.price %></small></span>
      </div>
      <div class="col-xs-3 text-right">
        <%=number_to_currency line_item.total_price %>
      </div>
      <div class="col-xs-2 pull-right">

      </div>
    </div>
  </li>
</ul>

<% end %>
