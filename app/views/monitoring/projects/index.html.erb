<div class="col-md-12">
  <div class="card">
    <div class="content">
      <div class="row">
      <div class="col-md-6 col-xs-8">
        <%=form_tag monitoring_projects_path, class: 'sidebar-form', method: :get do %>
          <div class="input-group">
            <%=text_field_tag :name, params[:name], class: 'form-control border-input', placeholder: 'Search for Project...' %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', class: "btn btn-default") do %>
                <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
      <div class="col-md-6 col-xs-4">
        <%=link_to "Summary (PDF)", monitoring_projects_path(@projects, format: 'pdf'), class: 'btn btn-primary' %>
        <%=link_to new_monitoring_project_path, title: "New Project" do %>
          <span class="btn btn-primary btn-icon pull-right" data-toggle="tooltip" data-placement="bottom" title="New Project"><i class="fa fa-plus"></i></span>
        <% end %>
    </div>
  </div>
</div>
</div>
<div class="row">
    <%@projects.each do |project| %>
    <%=link_to monitoring_project_path(project) do %>
      <div class="col-md-4">
        <div class="card">
          <div class="header">
            <b><%="##{project.id_number}"%></b>
            <p class="pull-right text-<%=project.slippage_color%>" data-toggle="tooltip" data-placement='bottom' title"Slippage"><i class="fa fa-angle-<%=project.slippage_sign%>"></i><%=number_to_currency project.slippage, unit: ""%> % </p>
            <div class="row"><hr></div>
          </div>
          <div class="content">
            <p><%=project.name.truncate(200) %></p>

            <% project.contractors.each do |contractor| %>
            <%=image_tag(contractor.profile_photo.url(:thumb), class: "img-circle", title: "#{contractor.name}", data: {toggle: 'tooltip', placement: 'bottom'}) %>
            <% end %>
            <hr>

            <span class="text-success"><i class="fa fa-rub"></i><%=number_to_currency project.cost %></span>
            <span class="text-success pull-right"><i class="fa fa-calendar"></i><%=project.days_elapsed %> / <%= project.duration.to_i %> Days</span>
            <br>
            <br>
            <div class="progress">
              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%=project.actual_accomplishment %>" aria-valuemin="0" aria-valuemax="100" style="width: <%=project.actual_accomplishment %>%;">
                <span class="text-black"><%=number_to_currency project.actual_accomplishment, unit: "" %>%</span>
              </div>
            </div>
          </div>

        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>
