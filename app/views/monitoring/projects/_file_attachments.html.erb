<div class="card">
  <div class="header">
    <h4 class="title"><%=image_tag("attachment.png", height: '35', width: '35')%> File Attachments
      <span class="pull-right">
        <%=link_to new_monitoring_project_file_attachment_path(@project), title: "New Sub Contractor" do %>
          <span class="btn btn-info btn-icon btn-sm" data-toggle="tooltip" data-placement="bottom" title="New Sub Contractor"><i class="fa fa-plus"></i></span>
        <% end %>
      </span>
    </h4>
    <div class="row"><hr></div>
  </div>
  <div class="content">
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Filename</th>
          <th>Description</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <% @project.file_attachments.each do |file| %>
          <tr>
            <td></td>
            <td><%= file.attached_file_file_name %></td>
            <td><%= file.description %></td>
            <td><%= file.date.strftime("%B %e, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>