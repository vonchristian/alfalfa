<%= simple_form_for [:monitoring, @project, @work_detail] do |f| %>
  <%=f.error_notification %>

    <%=f.input :code,  placeholder: 'Code' %>
    <%=f.input :description, placeholder: 'Description', as: :text, input_html:{rows: 3} %>
    <div class="row">
      <div class="col-md-6">
        <%=f.input :unit, placeholder: 'Unit' %>
      </div>
      <div class="col-md-6">
        <%=f.input :quantity,  placeholder: 'Quantity', input_html: {id: "work_detail_quantity", oninput: "calculateWorkDetailCost()"} %>
      </div>
    </div>
    <%=f.input :unit_cost,  placeholder: 'Unit Cost', input_html: {id: "work_detail_unit_price", oninput: "calculateWorkDetailCost()"}  %>
    <%=f.input :total_cost,  placeholder: 'Total Cost', readonly: true ,  input_html: {id: "work_detail_amount"}%>
    <div class="modal-footer">
      <%=f.submit "Save Work Detail", class: "btn btn-primary pull-right" %>
      <%=link_to "Back to Project", monitoring_project_path(@project) , class: "btn btn-default pull-left"%>
    </div>
<% end %>
