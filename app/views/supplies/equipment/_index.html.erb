
<div class="row">
    <div class="col-md-3">
      <small class="text-uppercase text-light-gray">Filter:</small>
      <span> <%=link_to 'Active', active_supplies_equipment_index_path, class: 'btn btn-success  btn-sm' %> </span>
      <span> <%=link_to 'Inactive', inactive_supplies_equipment_index_path, class: 'btn btn-danger btn-sm' %> </span>
      <span> <%=link_to 'All', supplies_equipment_index_path, class: 'btn btn-default btn-sm' %> </span>
    </div>
      <div class="col-sm-6">
        <%=form_tag supplies_equipment_index_path, method: :get do %>
          <div class="input-group stylish-input-group">
            <%=text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search Equipment' %>
            <span class="input-group-addon">
              <button type="submit">
                <span class=" glyphicon glyphicon-search"></span>
              </button>
            </span>
          </div>
        <% end %>
      </div>
      <div class="col-md-3">
        <span><%= link_to "New Equipment", new_equipment_path, class: "btn btn-warning active" %></span>
      </div>

</div>
  <br>
    <%=render @equipments %>
