<div class="col-md-12">
  <div class="card">
    <div class="header">
      <div class="row">
        <div class="col-md-6">
          <h4 class="title"><%=@inventory.name %></h4>
        </div>
        <div class="col-md-6">
          <div class="pull-right">
            <% if current_user.supply_officer? %>
              <%=link_to "New Stock", new_supplies_inventory_stock_path(@inventory), class: "btn btn-success" %>
              <%=link_to "Edit Inventory", edit_supplies_inventory_path(@inventory), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="content">
      <div class="row">
        <div class="col-md-6 border-right">
          <div class="header">
            <h4 class="title">Issued <%=@inventory.name %> History</h4>
            <hr class="no-padding">
          </div>
          <div class="content">
            <table class="table table-hover">
              <thead>
                <tr>
                <th>Date Issued</th>
                <th>Quantity</th>
                <th>Issued To</th>
                </tr>
              </thead>
              <tbody>
                <% @inventory.orders.each do |order| %>
                  <tr>
                    <td><%=order.created_at.strftime("%B %e, %Y") %></td>
                    <td><%=order.line_items.where(:inventory_id => @inventory.id).pluck(:quantity).sum %> <%=@inventory.unit %></td>
                    <td><%=order.customer.try(:name)%></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-6">
          <div class="header">
            <h4 class="title">Stocks History</h4>
            <hr class="no-padding">
          </div>
          <div class="content">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Quantity</th>
                </tr>
              </thead>
              <tbody>
                <% @inventory.stocks.order(:date).reverse.each do |stock| %>
                  <tr>
                    <td><%=stock.date.strftime("%B %e, %Y") %></td>
                    <td><%=stock.quantity %> <%=stock.inventory.unit %></td>

                  </tr>
                <% end %>
              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
