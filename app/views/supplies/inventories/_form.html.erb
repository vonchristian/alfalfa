<%= simple_form_for [:supplies, @inventory], url: :supplies_inventories  do |f| %>
<%=f.error_notification %>
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
      <div class="header">
        <h4 class="title">New Inventory</h4>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <%=f.input :name, autofocus: true %>
        <%=f.input :item_category_id, label: 'Category', collection: ItemCategory.all %>
        <% if @inventory.new_record? %>
          <%=f.simple_fields_for :stocks do |ff| %>
            <%= render 'stock_fields', :f => ff %>
          <% end %>
        <% end %>
        <div class="row">
          <div class="col-md-6">
            <%=f.input :price, placeholder: "Selling Price" %>
          </div>
          <div class="col-md-6">
            <%=f.input :unit, placeholder: 'e.g bags, liters, pcs' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= link_to "Cancel", supplies_inventories_path, class: 'btn  pull-left' %>
          <%=f.submit "Save Inventory", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
