<div class="row">
	<div class="col-md-6">
		<div class="card">
			<div class="header">
				<div class="row">
					<div class="col-md-4">
						<h4 class="title">Projects</h4>
					</div>
					<div class="col-md-8">
            <%=form_tag supplies_reports_path, method: :get do %>
              <div class="input-group stylish-input-group">
                <%=text_field_tag :name, params[:name], class: 'form-control', placeholder: 'Search Project' %>
                <span class="input-group-addon">
                  <button type="submit">
                    <span class=" glyphicon glyphicon-search"></span>
                  </button>
                </span>
              </div>
            <% end %>
				  </div>
				</div>
			</div>
			<div class="content">
						<% @projects.all.each do |project| %>
							<ul class="list-unstyled team-members">
                <li>
                  <div class="row">
                    <div class="col-md-7">
                      <%=project.name.truncate(150) %><br>
                        <i class="fa fa-map-marker"></i><small class="text-light-gray"><%=project.id_number_and_location %></small>
                    </div>
                    <div class="col-md-3">
                      <span class="title"><%=project.line_items.count %> Orders</span>
                    </div>
                    <div class="col-md-2">
                      <i class="fa fa-angle-right fa-3x contractor-name"></i>
                  </div>
                  </div>
                </li>
              </ul>
						<% end %>

			</div>
		</div>
	</div>
<div class="col-md-6">
  <div class="card">
      <div class="header">
        <div class="row">
          <div class="col-md-5">
            <h4 class="title">Contractors</h4>
          </div>
          <div class="col-md-7">
            <%=form_tag supplies_reports_path, method: :get do %>
              <div class="input-group stylish-input-group">
                <%=text_field_tag :contractor_name, params[:contractor_name], class: 'form-control', placeholder: 'Search Contractor' %>
                <span class="input-group-addon">
                  <button type="submit">
                    <span class=" glyphicon glyphicon-search"></span>
                  </button>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="content">
        <% @contractors.all.each do |contractor| %>
          <%=link_to supplies_contractor_path(contractor) do %>
            <ul class="list-unstyled team-members">
              <li>
                <div class="row">
                  <div class="col-md-2">
                    <%=image_tag(contractor.profile_photo.url(:medium), class: "img-circle", width: 60, height: 60) %>
                  </div>
                  <div class="col-md-5">
                    <p class="contractor-name"><%=contractor.full_name %></p>
                    <span class="text-muted"><%=contractor.company %></span>
                  </div>
                  <div class="col-md-3">
                    <span class="title"><%=contractor.orders.count %> Orders</span>
                  </div>
                  <div class="col-md-2">
                    <i class="fa fa-angle-right fa-3x contractor-name"></i>
                </div>
              </li>
            </ul>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
