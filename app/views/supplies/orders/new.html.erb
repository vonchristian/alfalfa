<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="card">
      <div class="header">
        <h4 class="title">Order Details </h4>
        <div class="row"><hr></div>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-5">
            <%=render @cart.line_items %>
            <hr>
            <span class="pull-left"><b>Total</b></span>
            <span class="pull-right"><%=number_to_currency @cart.line_items.total_price %></span>

          </div>
          <div class="col-md-5 col-md-offset-1">
            <%=simple_form_for @order, url: :orders do |f| %>
              <%=f.error_notification %>
              <%= f.input :date_issued, as: :string, label: 'Issue Date', input_html: { class: 'datetimepicker'} %>
              <%=f.input :customer_type, collection: Supplies::Order.customer_types, as: :radio_buttons %>
              <%= f.input :customer_id, collection: Supplies::Order.customers %>
              <%= f.input :payment_status, collection: Supplies::Order.payment_statuses.keys.to_a.map{|a| [a.titleize, a]}, as: :radio_buttons %>
              <div class="modal-footer">
                <%= link_to 'Add more items', supplies_path, class: 'btn btn-warning pull-left' %>
                <%=f.submit "Place Order", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    $("#supplies_order_customer_id").select2({
      theme: "bootstrap"
    });
  });
</script>
