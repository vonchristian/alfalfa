
  <div class="col-md-8 col-md-offset-2">
  <div class="card">
    <div class="header">
      <h4 class="title">Order Details </h4>
      <div class="row"><hr></div>
    </div>
    <div class="content">
      <table class="table table-hover">
        <thead>
          <tr>
            <th colspan="4"><h4 class="title"><%=@order.customer.try(:name) || @order.name %></h4></th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each do |line_item| %>
            <tr>
              <td><%= line_item.id %>   <%= line_item.order.date_issued.strftime("%B %e, %Y") %></td>
              <td><%=line_item.quantity %> <%=line_item.inventory.unit %></td>
              <td>
                <%=line_item.inventory.name%>
                <br />
                <span class="text-muted"><small><%=number_to_currency line_item.inventory.price %></small></span>
              </td>
              <td><p class="pull-right"><%=number_to_currency line_item.total_price %></p></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="modal-footer">
        <h4 class="title">Total:  <%=number_to_currency @order.line_items.total_price %></h4>
      </div>
    </div>
  </div>
</div>
