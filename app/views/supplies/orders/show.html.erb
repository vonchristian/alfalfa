
  <div class="col-md-8 col-md-offset-2">
  <div class="card">
    <div class="header">
      <h4 class="title">Order Details
        <div class="pull-right">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"> <b class="caret"></b></a>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><%= link_to 'Delete Order', order_path(@order), method: :delete, data: {confirm: 'Are you sure?'} %></li>
              </ul>
            </li>
          </ul>
        </div>
      </h4>
      <div class="row"><hr></div>
    </div>
    <div class="content">
      <table class="table table-hover">
        <thead>
          <tr>
            <th colspan="4"><h4 class="title"><%=@order.customer.try(:name) || @order.name %></h4></th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each do |line_item| %>
            <tr>
              <td><%= line_item.order.date_issued.strftime("%B %e, %Y") %></td>
              <td><%=line_item.quantity %> <%=line_item.inventory.unit %></td>
              <td>
                <%=line_item.inventory.name%>
                <br />
                <span class="text-muted"><small><%=number_to_currency line_item.inventory.price %></small></span>
              </td>
              <td><p class="pull-right"><%=number_to_currency line_item.total_price %></p></td>
              <td class="text-right">
                <div class="pull-right">
                  <ul class="nav navbar-nav">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"> <b class="caret"></b></a>
                      <ul class="dropdown-menu dropdown-menu-right">
                        <li><%= link_to 'Delete Item', supplies_line_item_path(line_item), method: :delete, data: {confirm: 'Are you sure?'} %></li>
                      </ul>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="modal-footer">
        <h4 class="title">Total:  <%=number_to_currency @order.line_items.total_price %></h4>
      </div>
    </div>
  </div>
</div>
