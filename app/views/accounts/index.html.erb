<div class="col-md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Accounts</h4>
      <%=link_to "New Account", new_account_path, class: 'btn btn-sm btn-primary pull-right' %>
    </div>
    <div class="content">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Type</th>
            <th>Credit Balance</th>
            <th>Debit Balance</th>
          </tr>
        </thead>
        <tbody>
          <% @accounts.each do |account| %>
            <tr>
              <td><%=account.code %></td>
              <td><%= account.name %></td>
              <td><%=account.type %></td>
              <td><%=account.credits_balance %></td>
              <td><%=account.debits_balance %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
