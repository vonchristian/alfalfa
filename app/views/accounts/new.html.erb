<%= simple_form_for @account, url: :accounts do |f| %>
<%=f.error_notification %>
<div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header with-border">
      <h4>New Account Details</h4>
		</div>
 		<div class="box-body">
			<div class="col-md-6">
			</div>
			<div class="col-md-6 well">
				<%=f.input :code %>
				<%=f.input :name %>
				<%=f.input :type, collection: ["Asset", "Liability", "Equity", "Expense", "Revenue"], as: :radio_buttons %>
				<hr>
				<%=f.submit "Save", class: "btn btn-primary pull-right" %>
			</div>
		</div>
	</div>
</div>
<% end %>

