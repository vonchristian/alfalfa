<%= simple_form_for @inventory  do |f| %>
<%=f.error_notification %>
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-solid">
      <div class="box-header with-border">
        <h4>New Material Details</h4>
      </div>
      <div class="box-body">
        <%=f.input :name, autofocus: true, placeholder: 'Inventory Name', input_html: {class: 'input-sm'} %>
        <%=f.input :description, as: :text, placeholder: 'Description', input_html: {class: 'input-sm'} %>

        <%=f.simple_fields_for :restockings do |ff| %>
          <%=ff.input :price, input_html: {class: 'input-sm'} %>
          <%=ff.input :quantity, input_html: {class: 'input-sm'} %>
        <% end %>

        <%=f.input :unit,  placeholder: 'Unit', input_html: {class: 'input-sm'} %>
      </div>
      <div class="box-footer">
        <div class="pull-right">
          <%=f.submit "Save Inventory", class: "btn btn-primary btn-sm" %>
          <br><br>
          <%= link_to "I'm done adding inventories.", inventories_path %>
        </div>
      </div>
    </div>
  </div>
<% end %>

