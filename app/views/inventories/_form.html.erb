<%= simple_form_for @inventory  do |f| %>
<%=f.error_notification %>
  <div class="col-md-4 col-md-offset-4">
    <div class="card">
      <div class="header">
        <h4>New Material Details</h4>
      </div>
      <div class="content">
        <%=f.input :name, autofocus: true%>
        <%=f.input :unit %>
        <%=f.input :price %>
        <%=f.simple_fields_for :stocks do |ff| %>
          <%=ff.input :date, as: :string, input_html: {class: "datepicker"} %>
          <%=ff.input :quantity%>
        <% end %>



        <div class="modal-footer">
          <%= link_to "I'm done adding inventories.", supplies_inventories_path, class: 'pull-left' %>
          <%=f.submit "Save Inventory", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
