<%=simple_form_for [:supplies, @inventory, @restocking], url: :supplies_inventory_stocks do |f| %>
	<div class="col-md-4 col-md-offset-4">
		<div class="box box-solid">
			<div class="box-header with-border">
				<h4>Restocking Details</h4>
			</div>
			<div class="box-body">
			  <%=f.input :quantity, input_html:{id: "quantity", oninput: "calculate()"} %>
			  <%=f.input :price, input_html:{id: "unit_price", value: :inventory_cost, oninput: "calculate()"} %>
			  <%=f.input :total_cost, label: false,  placeholder: 'Total Cost', readonly: true ,  input_html:{id: "amount"}%>
			</div>
		  <div class="box-footer">
		  	<div class="pull-right">
		  		<%=f.submit "Restock Inventory", class: "btn btn-primary btn-sm" %>
		  	</div>
		  </div>
		</div>
	</div>
<% end %>
