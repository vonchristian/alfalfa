<%=simple_form_for [@inventory, @restocking] do |f| %>
	<div class="col-md-4 col-md-offset-4">
		<div class="box box-solid">
			<div class="box-header with-border">
				<h4>Restocking Details</h4>
			</div>
			<div class="box-body">
			  <%=f.input :quantity %>
			  <%=f.input :price %>
			</div>
		  <div class="box-footer">
		  	<div class="pull-right">
		  		<%=f.submit "Restock Inventory", class: "btn btn-primary btn-sm" %>
		  	</div>
		  </div>
		</div>
	</div>
<% end %>

