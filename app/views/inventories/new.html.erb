<div class="col-md-4 col-md-offset-4">
<div class="box box-solid">
<div class="box-body">
<%= simple_form_for @inventory  do |f| %>
<%=f.error_notification %>


            <h4>New Material Details</h4>
            <hr>
            <%=f.input :name, autofocus: true, placeholder: 'Inventory Name' %>
            <%=f.input :description, as: :text, placeholder: 'Description' %>


<%=f.simple_fields_for :restockings do |ff| %>
<%=ff.input :price %>
<%=ff.input :quantity %>
<% end %>
     <%=f.input :unit,  placeholder: 'Unit' %>
              <div class="modal-footer">
                <%=f.submit "Save Inventory", class: "btn btn-primary bg-blue-active" %>
                <hr>
                <%= link_to "I'm done adding inventories.", inventories_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

