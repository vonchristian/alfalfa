<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-primary">
      <div class="box-header">
        <h4 class="text-center">New Inventory Details</h4>
      </div>
      <div class="box-footer">
        <%= simple_form_for @inventory, html: { class: 'form-horizontal' }, wrapper: :horizontal_form  do |f| %>
            <%=f.error_notification %>
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <%=f.input :name, as: :text, autofocus: true %>
                <%=f.input :description, as: :text %>
                <%=f.input :cost, as: :string, input_html: {autocomplete: "off"} %>
                <%=f.input :quantity, as: :string, input_html: {autocomplete: "off"} %>
                <%=f.input :unit %>
              </div>
            </div>
            <div class="modal-footer">
              <%=f.submit "Save Inventory", class: "btn btn-primary btn-flat bg-blue-active" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

