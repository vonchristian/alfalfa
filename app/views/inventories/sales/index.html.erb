<div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-md-4">
          <h3>List of Sales</h3>
        </div>
        <div class="col-md-8">
          <div class="pull-right">
            <%= form_tag({:action => 'index'}, {:method => :get, class: 'form-inline'}) do %>
              <div class="form-group">
                <%= label_tag :from_date, nil, class: 'sr-only' %>
                <%= text_field_tag :from_date, @from_date, class: 'datetimepicker form-control', placeholder: 'Date', :as => :datetime_picker %>
              </div>
              <div class="form-group">
                <%= label_tag :to_date, nil, class: 'sr-only' %>
                <%= text_field_tag :to_date, @to_date, class: 'datetimepicker form-control', placeholder: 'Date', :as => :datetime_picker %>
              </div>
              <button type="submit" class="btn btn-default" format="pdf">Generate Report</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="col-md-8">
        <div class="box-header">
          <div class="pull-right">
            <%=link_to "Print Report(PDF)", sales_path(format: 'pdf', :from_date => @from_date.beginning_of_day, :to_date => @to_date.end_of_day), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>Recipient</th>
              <th>Item</th>
              <th>Quantity</th>
              <th><span class="pull-right">Amount</span></th>
              <th><span class="pull-right">Date</span></th>
            </tr>
          </thead>
          <tbody>
            <% @sales.entered_on(:from_date => @from_date, :to_date => @to_date).each do |sale| %>
              <tr>
                <td><%= sale.recipient %></td>
                <td><%= sale.inventory.name %> - <%= sale.inventory.description %></td>
                <td><%= sale.quantity %> <%= sale.inventory.unit %></td>
                
                <td><span class="pull-right"><%= number_to_currency sale.amount %></span></td>
                <td><span class="pull-right"><%= sale.date.strftime("%B %e, %Y") if sale.date.present? %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="well">
            <h3 class="text-center">
              
            <span class="help-block"><center class="text-uppercase">Total</center></span>
            <br>
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <% if current_user.accounting_officer? %>
                  <%= link_to new_sale_path, class: 'btn btn-success btn-block' do %><i class="fa fa-plus-circle"></i> New Sale <%end%>
                <% end %>
              </div>
            </div>
            </h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>