<div class="col-md-12">
  <div class="card">
    <div class="header">
      <div class="row">
        <div class="col-md-6">
          <h4><%=@inventory.name %></h4>
        </div>
        <div class="col-md-6">
          <div class="pull-right">
            <% if current_user.supply_officer? %>
              <%=link_to "Restock", new_inventory_stock_path(@inventory), class: "btn btn-success" %>
              <%=link_to "Edit Inventory", edit_inventory_path(@inventory), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="content">
      <div class="row">
        <div class="col-md-6 border-right">
          <div class="header">
            <h4 class="title">Issued <%=@inventory.name %> History</h4>
          </div>
          <div class="content">
            <table class="table table-hover">
              <thead>
                <tr class="text-uppercase">
                <th>Date Issued</th>
                <th>Quantity</th>
                <th>Issued To</th>
                </tr>
              </thead>
              <tbody>
                <% @inventory.line_items.each do |inventory| %>
                  <tr>
                    <td><%=issued_inventory.date_issued.strftime("%B %e, %Y") %></td>
                    <td><%=issued_inventory.quantity %> <%=issued_inventory.inventory.unit %></td>
                    <td><%=issued_inventory.customer %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-6">
          <div class="header">
            <h4 class="title">Stocks History</h4>
          </div>
          <div class="content">
            <table class="table table-hover">
              <thead>
                <tr class="text-uppercase">
                  <th>Date</th>
                  <th>Quantity</th>

                </tr>
              </thead>
              <tbody>
                <% @inventory.stocks.each do |restock| %>
                  <tr>
                    <td><%=restock.date.strftime("%B %e, %Y") %></td>
                    <td><%=restock.quantity %> <%=restock.inventory.unit %></td>

                  </tr>
                <% end %>
              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
