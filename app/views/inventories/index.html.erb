<% if @inventories.blank? %>
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-body">
        <div class="alert alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><i class="fa fa-cubes"></i> Welcome to the Inventories Page</h4> 
          <hr>
          <span>This is where you track your warehouse inventories. </span>
          <br>
          <span class="text-center"><%=link_to new_inventory_path, class: "btn btn-link bg-blue-active pull-right" do %><i class="fa fa-plus-circle"></i> New Inventory <%end%></span>
        </div>
      </div> 
    </div>
  </div>
  <% else %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <!-- Widget: user widget style 1 -->
        <div class="box box-widget widget-user">
          <!-- Add the bg color to the header using any of the bg-* classes -->
          <div class="widget-user-header bg-blue-active">
            <h3 class="widget-user-username">Inventories
              <span class="pull-right"><%=link_to new_inventory_path, class: "btn btn-default bg-blue-active pull-right" do %><i class="fa fa-plus-circle"></i> New Inventory <%end%></span>
            </h3>
          </div>
          <div class="box-footer">
            <div class="row">
              <div class="col-sm-10 border-right col-md-offset-1">
                <div>
                  <% @inventories.each do |inventory| %>
                    <h5><%= link_to inventory.name.upcase, inventory %>
                      <span class="pull-right"><%= inventory.quantity %> <%= inventory.unit %></span>
                    </h5>
                    <hr />
                  <% end %>
                </div><!-- /.description-block -->
              </div><!-- /.col -->
            </div><!-- /.description-block -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div>
    </div><!-- /.widget-user -->
  </div><!-- /.col -->
<% end %>
