<div class="row">
<div class="col-md-6 col-md-offset-3">
  <!-- Widget: user widget style 1 -->
  <div class="box box-widget widget-user">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header bg-blue-active">
      <h3 class="widget-user-username">Inventory
      <span class="pull-right"><%=link_to new_inventory_path, class: "btn btn-default bg-blue-active pull-right" do %><i class="fa fa-plus-circle"></i> New Inventory <%end%></span>
    </h3>
    </div>
    <div class="box-footer">
      <div class="row">
        <div class="col-sm-12 border-right">

          <div>




            <% @inventories.each do |inventory| %>

            <h4><%= link_to inventory.name.upcase, inventory %>
            <span class="pull-right"><%= inventory.quantity %> <%= inventory.unit %></span></h4>
            <hr />
            <% end %>
          </div><!-- /.description-block -->
        </div><!-- /.col -->

          </div><!-- /.description-block -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div>
  </div><!-- /.widget-user -->
</div><!-- /.col -->
</div>
