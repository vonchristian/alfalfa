<div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-md-6">
          <h4>List of Materials</h4>
        </div>
        <div class="col-md-6">
          <div class="pull-right">
            <% if current_user.supply_officer? %>
              <%=link_to "New Material", new_inventory_path, class: "btn btn-sm btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table">
        <thead>
          <tr class="text-uppercase">
            <th>Description</th>
            <th>Remaining Quantity</th>
            <th>Unit Cost</th>
          </tr>
        </thead>
        <tbody>
          <% @inventories.each do |inventory| %>
            <tr>
              <td><%= link_to inventory.name_description, inventory %></td>
              <td><%= inventory.remaining_quantity %> <%= inventory.unit %></td>
              <td><%= number_to_currency inventory.restockings.last.try(:price)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

