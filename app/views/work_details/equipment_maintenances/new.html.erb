<div class="container">
  <div class="box box-solid">
  <div class="box box-header">
    <h4>New Maintenace </h4>
  </div>
  <div class="box-body">

    <%=simple_form_for @maintenance, url: :equipment_maintenances do |f| %>
    <%=f.error_notification %>
<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-5">
      <%=f.input :equipment, collection: Equipment.all %>
      <%=f.input :employee, collection: Employee.operator %>
      <%=f.input :description %>
      <%=f.input :quantity %>
      <%=f.input :unit %>
      <%=f.input :amount %>
      <%=f.input :remarks %>
    </div>
  </div>
  <div class="modal-footer">
    <%=f.submit "Save Maintenace Expense", class: "btn btn-primary" %>
  </div>
    <% end %>
  </div>
</div>
