<%=simple_form_for [@work_detail, @maintenance], url: :work_detail_equipment_maintenances do |f| %>
<%=f.error_notification %>
  <div class="col-md-5 col-md-offset-3">
    <div class="box box-solid">
      <div class="box box-header with-border">
        <h4>Equipment Maintenance Details</h4>
      </div>
      <div class="box-body">
        <%=f.input :equipment_id, collection: Equipment.all%>
        <%=f.input :description, as: :text, label: false, placeholder: 'Description' %>
        <div class="row">
          <div class="col-md-6">
            <%=f.input :quantity, label: false, placeholder: 'Quantity' %>
          </div>
          <div class="col-md-6">
            <%=f.input :unit, label: false, placeholder: 'Unit' %>
          </div>
        </div>
        <%=f.input :amount, label: false, placeholder: 'Amount' %>
        <%=f.input :remarks, as: :text, label: false, placeholder: 'Remarks' %>
      </div>
      <div class="box-footer">
        <%= link_to "Cancel", @work_detail, class: "btn btn-default btn-sm" %>
        <%=f.submit "Save", class: "btn btn-primary btn-sm pull-right" %>
      </div>
    </div>
  </div>
<% end %>
<script>
  $(document).ready(function() {
    $("#maintenance_equipment_id").select2({
      theme: "bootstrap"
    });
  });
</script>
