<div class="container">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h4>Equipment Cost Details</h4>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-5">
          <%=simple_form_for [@work_detail, @equipment_cost], url: :work_detail_equipment_costs do |f| %>
            <%=f.error_notification %>
            <%=f.input :equipment_id, collection: Equipment.all %>
            <div class="row">
              <div class="col-md-6">
                <%=f.input :start_date, as: :string, input_html: { class: "datepicker" } %>
              </div>
              <div class="col-md-6">
                <%=f.input :end_date, as: :string, input_html: { class: "datepicker" } %>
              </div>
            </div>
            <%=f.input :number_of_hours %>
            <%=f.input :rate %>
            <%=f.input :total_cost %>
            <div class="modal-footer">
              <%=f.submit "Save Equipment Schedule", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

