<%=simple_form_for [@work_detail, @equipment_cost], url: :work_detail_equipment_costs do |f| %>
<%=f.error_notification %>
  <div class="col-md-5 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header with-border">
        <h4>Equipment Cost Details</h4>
      </div>
      <div class="box-body">
        <%=f.input :equipment_id, collection: Equipment.all %>
        <div class="row">
          <div class="col-md-6">
            <%=f.input :start_date, as: :string, input_html: { class: "datetimepicker" } %>
          </div>
          <div class="col-md-6">
            <%=f.input :end_date, as: :string, input_html: { class: "datetimepicker" } %>
          </div>
        </div>
        <%=f.input :number_of_hours %>
        <%=f.input :rate %>
        <%=f.input :total_cost %>
      </div>
      <div class="box-footer">
        <%= link_to "Cancel", @work_detail, class: "btn btn-default btn-sm" %>
        <%=f.submit "Save", class: "btn btn-primary btn-sm pull-right" %>
      </div>
    </div>
  </div>
<% end %>

<script>
  $(document).ready(function() {
    $("#equipment_schedule_equipment_id").select2({
      theme: "bootstrap"
    });
  });
</script>
