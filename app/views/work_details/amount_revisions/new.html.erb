<%= simple_form_for [@work_detail, @amount_revision], url: :work_detail_amount_revisions do |f| %>
<%=f.error_notification %>
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-widget widget-user">
      <div class="widget-user-header bg-blue-active">
        <h3 class="widget-user-username">New Amount Revision</h3>
      </div>
      <div class="box-body">
        <div class="col-sm-12 border-right">
          <%=f.input :date, as: :string, input_html: {class: "datetimepicker"} %>
          <%=f.input :amount, label: "Additional Amount", as: :string %>
          <%=f.input :remarks, as: :text %>
        </div>
      </div>
      <div class="box-footer">
          <%= link_to 'Cancel', @work_detail, class: 'btn btn-warning btn-sm' %>
          <%=f.submit "Save", class: "btn btn-primary pull-right btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
