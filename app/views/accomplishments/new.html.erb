
<div class="col-md-4 col-md-offset-4">
  <!-- Widget: user widget style 1 -->
  <div class="box box-widget widget-user">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header bg-blue-active">
      <h3 class="widget-user-username">New Accomplishment</h3>
    </div>
    <div class="box-footer">
      <div class="row">
        <div class="col-sm-12">
          <div>
                  <%= simple_form_for [@project, @accomplishment] do |f| %>
<%=f.error_notification %>

<%=f.input :percent, as: :string, placeholder: "Percent of Accomplishment", autofocus: true %>
<%=f.input :remarks, as: :text, input_html:{rows: 10} %>
<%= f.label :images_files, label: "Upload Images"%><br>

    <%= f.attachment_field :images_files, multiple: true, presigned: true, direct: true %>
<div class="modal-footer">
<%=f.submit "Save Accomplishment", class: "btn btn-primary" %>

</div>
<% end %>
</div>
