<%= simple_form_for [@project, @remark] do |f| %>
<%=f.error_notification %>
<div class="col-md-4 col-md-offset-4">
  <div class="box box-widget widget-user">
    <div class="widget-user-header bg-blue-active">
      <h3 class="widget-user-username">New Remark</h3>
    </div>
    <div class="box-body">   
      <%=f.input :title %>
      <%=f.input :content, as: :text, placeholder: "Add your remarks here.",  :input_html => {:rows => 10}, label: false, autofocus: true %>
    </div>
    <div class="box-footer">
      <div class="pull-right">
        <%=link_to "Cancel", @project, class: 'btn btn-warning' %>
        <%=f.submit "Save Remark", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>