<%=render 'cash_advances' %>
<div class="col-md-12">
  <div class="card">
    <div class="header">
      <h4 class="title"> Cash Advances</h4>
    </div>
    <div class="content">
        <table class="table table-hover">
  <thead>
    <tr>
      <th>Employee </th>
      <th>Cash Advances</th>
      <th>Total </th>
    </tr>
  </thead>
<% Employee.all.each do |employee| %>
  <tbody>
<tr>
  <td><%= employee.full_name %></td>
<td><% employee.cash_advances.each do |cash_advance| %>
<span class="category"><%=cash_advance.date.strftime("%B %e, %Y") %>
  <span class="pull-right"><%=number_to_currency cash_advance.credit_amounts.sum(:amount) %></span>
</span>
<br>
<% end %>
</td>
<td><span class="pull-right"><%=number_to_currency employee.unpaid_cash_advances%></span></td>
</tr>
</tbody>
<% end %>
</table>
</div>
</div>
</div>
