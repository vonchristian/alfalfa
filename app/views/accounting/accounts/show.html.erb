<div class="col-md-12">
  <div class="card">
    <div class="header">
      <h4 class="title"><%=@account.type %> | <%= @account.name %> </h4>
    </div>
    <div class="content">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Recipient </th>
            <th>Date</th>
            <th>Description </th>
            <th>Amount </th>
          </tr>
        </thead>
        <tbody>
          <% @account.entries.each do |entry| %>
          <tr>
            <td><%=entry.recipient.try(:full_name) %></td>
            <td><%=entry.date.strftime("%B %e, %Y") %></td>
            <td><%=entry.description %></td>
            <td><%=number_to_currency entry.debit_amounts.sum(:amount) %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
