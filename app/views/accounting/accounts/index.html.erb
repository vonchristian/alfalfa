<div class="col-md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Accounts
      <%= link_to "New Account", new_accounting_account_path, remote: true, class: "btn btn-primary pull-right" %></h4>
      <div class="row"><hr></div>
    </div>
    <div class="new-account"></div>
    <table class="table table-hover">
      <thead>
        <tr class="title">
          <th>Code</th>
          <th>Name</th>
          <th>Type</th>
          <th> Debit Balance </th>
          <th> Credit Balance </th>
          <td>&nbsp;</td>
        </tr>
      </thead>
      <tbody class="account-index">
        <%= render "index" %>
      </tbody>
    </table>
  </div>
  <div id="account-modal" class="modal fade"></div>
</div>
