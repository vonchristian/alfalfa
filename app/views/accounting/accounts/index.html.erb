<div class="col-md-12">
  <div class="card">
    <div class="header">
      <div class="row">
        <div class="col-md-3">
          <h4 class="title">Accounts </h4>
        </div>
        <div class="col-md-6">
          <%=form_tag accounting_accounts_path, method: :get do %>
            <div class="input-group stylish-input-group">
              <%=text_field_tag :name, params[:name], class: 'form-control', placeholder: 'Search Account' %>
              <span class="input-group-addon">
                <button type="submit">
                  <span class=" glyphicon glyphicon-search"></span>
                </button>
              </span>
            </div>
          <% end %>
        </div>
        <div class="col-md-3">
          <%= link_to "New Account", new_accounting_account_path, remote: true, class: "btn btn-primary pull-right" %>
        </div>
      </div>
      <div class="row"><hr></div>
    </div>
    <div class="new-account"></div>
    <table class="table table-hover">
      <thead>
        <tr class="title">
          <th>Code</th>
          <th>Name</th>
          <th>Type</th>
          <th> Debit Balance </th>
          <th> Credit Balance </th>
          <td>&nbsp;</td>
        </tr>
      </thead>
      <tbody class="account-index">
        <%= render "index" %>
      </tbody>
    </table>
  </div>
  <div id="account-modal" class="modal fade"></div>
</div>
