<%= simple_form_for @account, url: :accounting_accounts do |f| %>
<%=f.error_notification %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="card">
        <div class="header">
          <h4 class="title"> New Account </h4>
          <div class="row"><hr></div>
        </div>
        <div class="content">
  				<%=f.input :code %>
  				<%=f.input :name %>
          <%=f.input :contra, label: "Contra Account?" %>
  				<%=f.input :type, collection: ["Asset", "Liability", "Equity", "Expense", "Revenue"], as: :radio_buttons %>

  				<div class="modal-footer">
            <%= link_to "Cancel", accounting_accounts_path, class: 'btn btn-xs pull-left' %>
  				  <%=f.submit "Save Account", class: "btn btn-primary pull-right" %>
  			  </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
