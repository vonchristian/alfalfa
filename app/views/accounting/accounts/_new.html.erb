<div class="modal-header">
<h3 class="title">New Account</h3>
</div>
<div class="modal-dialog">
  <div class="modal-content">
    <%= simple_form_for [:accounting, @account], url: :accounting_accounts, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors text-danger">
        </ul>

        <div class="form-group">
          <%=f.input :name %>
        </div>
        <div class="form-group">
          <%=f.input :code %>
        </div>
        <div class="form-group">
          <%=f.input :type, collection: ["Asset", "Liability", "Equity", "Expense", "Revenue"], as: :radio_buttons %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
