<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title"><%= "Editing #{@account.name}" %></h4>
    </div>
    <%= simple_form_for [:accounting, @account], url: :accounting_account, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors text-danger">
        </ul>

        <div class="form-group">
          <%=f.input :name %>
        </div>
        <div class="form-group">
          <%=f.input :code %>
        </div>
        <div class="form-group">
          <%=f.input :type, collection: ["Asset", "Liability", "Equity", "Expense", "Revenue"], as: :radio_buttons %>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
        <%= f.submit class: "btn btn-primary active" %>
      </div>
    <% end %>
  </div>
</div>
