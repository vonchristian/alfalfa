<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="header">
				<h4 class="title">Entries
					<span class="pull-right"><%=link_to "New Entry", new_accounting_entry_path, class: "btn btn-primary" %> </span>
				</h4>
				<hr />
			</div>
			<div class="content">
				<table class="table table-hover">
					<thead>
						<tr>
							<th> Date </th>
							<th> Description </th>
							<th> Recipient </th>
							<th> Debit </th>
							<th> Credit </th>
							<th> Type </th>
						</tr>
					</thead>
					<tbody>
					<% @entries.each do |entry| %>
						<tr>
							<td width="20%">
								<small class="help-block"><i class="fa fa-clock-o"></i> <%=entry.created_at.strftime("%B %d, %Y %I:%M%p") %></small>
							</td>
              <td><small><%=link_to entry.description, accounting_entry_path(entry) %></small></td>
							<td><small><%=entry.entriable.try(:name) %></small></td>
							<td>
								<div class="row">
									<div class="col-md-8">
										<% entry.debit_amounts.each do |debit| %>
										  <small><%=debit.account.name %></small><br>
										<% end %>
									</div>
									<div class="col-md-4">
										<% entry.debit_amounts.each do |debit| %>
											<small><%=number_to_currency debit.amount %></small>
										<% end %>
									</div>
								</div>
							</td>
							<td>
								<div class="row">
									<div class="col-md-7">
										<% entry.credit_amounts.each do |credit| %>
											<small><%=credit.account.name %></small>
										<% end %>
									</div>
									<div class="col-md-4">
										<% entry.credit_amounts.each do |credit| %>
											<small><%=number_to_currency credit.amount %></small>
										<% end %>
									</div>
								</div>
							</td>
							<td><small><%=entry.type.sub("Transactions::", "") if entry.type %></small></td>
						</tr>
					<% end %>
				</tbody>
				</table>
			</div>
		</div>
	</div>
</div>