
<div class="row">
	<div class="col-md-4">
		<div class="card">
			<div class="header">
				<h4 class="title">Entries Filter</h4>
				<div class="row"><hr></div>
			</div>
			<div class="content">
				<%= form_tag({:action => 'index'}, {:method => :get}) do%>
					<div class="form-group">
						<label>From Date:</label>
						<%= text_field_tag :from_date, @from_date, :class => 'datetimepicker form-control border-input', :placeholder => "Date" %>
					</div>
					<div class="form-group">
						<label>To Date:</label>
						<%= text_field_tag :to_date, @to_date, :class => 'form-control border-input datetimepicker', :placeholder => "Date" %>
					</div>
					<div class="modal-footer">
						<%=link_to "View (PDF)", accounting_entries_path(format: 'pdf', from_date: @from_date, to_date: @to_date), class: "btn btn-primary pull-left"%>
						<button type="submit" class="btn btn-primary active pull-right">Get Report</button>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-8">
		<div class="card">
			<div class="header">
				<div class="row">
					<div class="col-md-3">
						<h4 class="title">Entries
						</h4>
					</div>
					<div class="col-md-6">
						<%=form_tag accounting_entries_path, class: 'sidebar-form', method: :get do %>
				      <div class="input-group">
				        <%=text_field_tag :query, params[:query], class: 'form-control border-input', placeholder: 'Search Entries...' %>
				        <span class="input-group-btn">
				          <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
				            <i class="fa fa-search"></i>
				          <% end %>
				        </span>
				      </div>
				    <% end %>
					</div>
					<div class="col-md-3">
						<span class="pull-right"><%=link_to "New Entry", new_accounting_entry_path, class: "btn btn-primary" %> </span>
					</div>
				</div>
				<div class="row"><hr class="no-top-padding"></div>
			</div>
			<div class="content">
				<div class="table table-responsive">
					<table class="table table-hover">
						<thead>
							<tr>
								<th> Date </th>
								<th> Description </th>
								<th> Recipient </th>
								<th> Debit </th>
								<th> Credit </th>
								<th> Amount</th>
								<th> Type </th>
							</tr>
						</thead>
						<tbody>
							<% @entries.each do |entry| %>
								<tr>
									<td width="20%">
										<small class="help-block"><i class="fa fa-clock-o"></i> <%=entry.created_at.strftime("%B %d, %Y %I:%M%p") %></small>
									</td>
		              <td><small><%=link_to entry.description.truncate(200), accounting_entry_path(entry) %></small></td>
									<td><small><%=entry.entriable.try(:name) %></small></td>
									<td>
										<% entry.debit_amounts.each do |debit| %>
										  <small><%=debit.account.name %></small><br>
										<% end %>
									</td>
									<td>
										<% entry.credit_amounts.each do |credit| %>
											<small><%=credit.account.name %></small>
										<% end %>
									</td>
									<td>
										<% entry.credit_amounts.each do |credit| %>
											<small><%=number_to_currency credit.amount %></small>
										<% end %>
									</td>
									<td><small><%=entry.type.sub("Transactions::", "") if entry.type %></small></td>
								</tr>
							<% end %>
						</tbody>
					</table>
					<div class="modal-footer">
	          <center><%= paginate @entries, :window => 1 %></center>
	          <%=link_to "View All", class: "btn btn-info" %>
	        </div>
				</div>
			</div>
		</div>
	</div>
</div>
