<div class="row">
<div class="col-md-5 col-md-offset-3">
  <!-- Widget: user widget style 1 -->
  <div class="box box-widget widget-user">
    <!-- Add the bg color to the header using any of the bg-* classes -->
    <div class="widget-user-header bg-blue-active">
      <h3 class="widget-user-username">New Contractor</h3>
    </div>
    <div class="box-footer">
      <div class="row">
        <div class="col-sm-12 border-right">
          <div>
                  <%= simple_form_for @contractor  do |f| %>
<%=f.error_notification %>
   
 <div class="row">
 <div class="col-md-4">
 <%= f.label :profile_image, label: "Upload" %>
  <%= f.attachment_field :profile_image %>

  <%= f.check_box :remove_profile_image %>
  <%= f.label :remove_profile_image %></div>
 <div class="col-md-8">
 <div class="row">
 <div class="col-md-5">
<%=f.input :first_name, label: "First Name"%>
</div>

<div class="col-md-5">
<%=f.input :last_name %>
</div>
</div>
<div class="col-md-12">
<%=f.input :company %>
<%=f.input :position %>
</div> 
</div>
<div class="modal-footer">
<%=f.submit "Register Contractor", class: "btn btn-primary bg-blue-active" %>
</div>
<% end %>
</div>
</row>
