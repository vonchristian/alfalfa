<div class="col-md-4 col-md-offset-4">
<div class="box box-solid">
<%= simple_form_for [@contractor, @issued_inventory], url: :contractor_issued_inventories do |f| %>
<%=f.error_notification %>
  <div class="well">
    <h4>Issue Material Details</h4>
    <hr>
    <%=f.input :project_id, label: false, collection: @contractor.projects.all.map{ |a| [a.id_number, a.id]}, prompt: "Select Project", input_html: {style: 'width:100%'} %>
    <%=f.input :inventory_id, label: false, collection: Inventory.all, prompt: "Select Material", input_html: {style: 'width:100%'} %>
    <%=f.input :date_issued, as: :string, input_html:{class: "datetimepicker"}, placeholder: 'Issue Date', label: false %>
    <%=f.input :quantity, label: false, placeholder: 'Quantity', input_html:{id: "quantity", oninput: "calculate()"} %>
    <%=f.input :unit_cost, label: false, placeholder: 'Inventory Cost', input_html:{id: "unit_price", value: :inventory_cost, oninput: "calculate()"}  %>
    <%=f.input :total_cost, label: false,  placeholder: 'Total Cost', readonly: true ,  input_html:{id: "amount"}%>
    <div class="row">
      <div class="modal-footer">
        <%=f.submit "Issue Inventory", class: "btn btn-primary btn-sm" %>
        <hr>
        <%=link_to "I'm done issuing inventories", contractor_path(@contractor) %>
      </div>
    </div>
  </div>
<% end %>
<script>
    $(document).ready(function() {
        $("#issued_inventory_project_id").select2({
            theme: "bootstrap"
        });
    });
</script>
<script>
    $(document).ready(function() {
        $("#issued_inventory_inventory_id").select2({
            theme: "bootstrap"
        });
    });
</script>
