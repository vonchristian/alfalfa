<div class="col-md-6 col-md-offset-3">
  <div class="card">
    <div class="header">
      <h4 class="title">Contractor Details </h4>
      </div>
      <div class="content">
        <%= simple_form_for @contractor do |f| %>
          <%=f.error_notification %>
          <%= image_tag @contractor.profile_photo.url(:medium), class: 'center-block img-responsive img-circle'%>
          <center><%= f.input :profile_photo, class: 'center-block', as: :file %></center>
          <hr>
            <div class="row">
              <div class="col-md-6">
                <%=f.input :first_name, autofocus: true, label: "First Name", placeholder: "First Name" %>
              </div>
              <div class="col-md-6">
                <%=f.input :last_name, label: "Last Name", placeholder: "Last Name"  %>
              </div>
            </div>
            <%=f.input :company, placeholder: "Company Name" %>
            <%=f.input :position, placeholder: "Position" %>
            <%=f.input :main_contractor, label: "Main Contractor?" %>
        <div class="modal-footer">
          <%=f.submit 'Save Contractor', class: 'btn btn-primary pull-right' %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
