 <div class="row">
<div class='col-md-4 col-md-offset-4'>
  <div class="panel panel-default">
    <div class="panel-body">
      <h4 class="text-center">Contractor Details </h4>
      <hr />
       <%= simple_form_for @contractor do |f| %>
      <%=f.error_notification %>

      <%if @contractor.profile_image.blank? %>
        <%=image_tag("default-small.png", :class=>"img-square center-block ") %>
        <br>
        <% else %>
        <%= image_tag attachment_url(@contractor, :profile_image, :fill, 150, 150), class: 'center-block img-responsive img-rounded'%>
        <% end %>
        <%= f.file_field :profile_image, class: 'center-block'%>

      <hr>
<div class="row">
<div class="col-md-6">
        <%=f.input :first_name, autofocus: true, label: false, placeholder: "First Name" %>
        </div>
        <div class="col-md-6">
        <%=f.input :last_name, label: false, placeholder: "Last Name"  %>
        </div>
        </div>
   <%=f.input :company, label: false, placeholder: "Company Name" %>
   <%=f.input :position, label: false, placeholder: "Position" %>
   <%=f.input :main_contractor %>
        <div class="modal-footer">
          <%=f.submit 'Save Contractor', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>

