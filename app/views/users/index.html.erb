<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="header">
				<h4 class="title">User Access<span class="pull-right"><%=link_to "New User", new_user_path, class: "btn btn-primary" %></span></h4>
				<div class="row"><hr></div>
			</div>
			<div class="content">
				<div class="row">
					<%@users.each do |user| %>
						<div class="col-md-2">
							<%= link_to user do %>
								<%= image_tag user.profile_photo.url(:large),  class: "img-rounded center-block" %>
								<small><b><center><%= user.full_name.upcase %></center></b></small>
								<span class="text-muted"><center><%=user.try(:role).titleize %></center></span>
							<% end %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>



